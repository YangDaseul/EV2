<resources>

    <style name="LeasingCarTextViewTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
    </style>


    <style name="LeasingCarTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
    </style>

    <style name="LeasingCarTextViewWait" parent="LeasingCarTextView">
        <item name="android:textColor">@color/x_4ea39d</item>
        <item name="android:fontFamily">@font/bold_genesissanstextglobal</item>
    </style>

    <style name="LeasingCarTextViewReject" parent="LeasingCarTextView">
        <item name="android:textColor">@color/x_ba544d</item>
        <item name="android:fontFamily">@font/bold_genesissanstextglobal</item>
    </style>

    <style name="LeasingCarTextViewAllow" parent="LeasingCarTextView">
        <item name="android:textColor">@color/x_cd9a81</item>
        <item name="android:fontFamily">@font/bold_genesissanstextglobal</item>
    </style>

</resources>
