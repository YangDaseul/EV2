<resources>
    <!-- 지도 UI 타이틀바 : 스타일 변경으로 두 가지 모습을 표현함.
    이것을 상속한 스타일 두 개가 밑에 있음 -->
    <style name="MapOverlayTitleBar" parent="TextBasic">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawableRight">@drawable/btn_open_r</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 지도 UI 타이틀바 힌트 -->
    <style name="MapOverlayTitleBar.Hint" parent="MapOverlayTitleBar">
        <item name="android:background">@drawable/ripple_bg_ffffff_round_99</item>
        <item name="android:textColor">@color/x_aaabaf</item>
    </style>

    <!-- 지도 UI 타이틀바 SONAX 지점 검색 -->
    <style name="MapOverlayTitleBar.SearchSonax" parent="MapOverlayTitleBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/ripple_bg_ffffff_round_99_stroke_141414</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="layout_constraintStart_toEndOf">@id/back</item>

    </style>


    <!-- 지도 UI 하단 검은상자 : 검은 상자 자체-->
    <style name="MapOverlayBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@color/x_e6141414</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <!--  이 밑으로는 텍스트 뷰 -->

    <!-- 지도 UI 하단 검은상자 -->
    <style name="MapOverlay" parent="TextBasic">
        <item name="android:textColor">@color/x_ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
    </style>
    <!-- 지도 UI 하단 검은상자 : 타이틀 -->
    <style name="MapOverlay.RegularHead" parent="MapOverlay">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
    </style>
    <!-- 지도 UI 하단 검은상자 : 거리 -->
    <style name="MapOverlay.RegularText" parent="MapOverlay">
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
    </style>
    <!-- 지도 UI 하단 검은상자 : 주소 등  -->
    <style name="MapOverlay.Light" parent="MapOverlay">
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
        <item name="maxLines">2</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>


    <!-- 지도 UI 하단 검은상자 : sonax 지점 : 갈색 글씨 부분 -->
    <style name="MapOverlay.Sonax.Service" parent="TextBasic">
        <item name="android:textColor">@color/x_cd9a81</item>
        <item name="android:textSize">13sp</item>
    </style>
    <!-- 지도 UI 하단 검은상자 : sonax 지점 : "가능서비스" -->
    <style name="MapOverlay.Sonax.Service.Title" parent="MapOverlay.Sonax.Service">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
    </style>
    <!-- 지도 UI 하단 검은상자 : sonax 지점 : 서비스내용 -->
    <style name="MapOverlay.Sonax.Service.List" parent="MapOverlay.Sonax.Service">
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
    </style>

    <!-- 지도 UI 하단 검은상자 : 버튼 -->
    <style name="MapOverlay.Btn" parent="TextBtnBasic">
        <item name="android:textColor">@color/x_141414</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
        <item name="android:background">@drawable/ripple_bg_ffffff</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- 지도 검색 결과 목록 뷰-->
    <!-- 지점 검색 결과 타이틀 -->
    <style name="MapResult.Title" parent="TextBasic">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 지점 검색 결과 아이템 공통 -->
    <style name="MapResult.Item" parent="TextBasic">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/x_000000</item>
    </style>

    <!-- 지점 검색 결과 아이템 (지점명, 거리) -->
    <style name="MapResult.Item.Regular" parent="MapResult.Item">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
    </style>

    <!-- 지점 검색 결과 아이템 (주소, 동, 전화번호) -->
    <style name="MapResult.Item.light" parent="MapResult.Item">
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
    </style>




    <!-- 지도 UI 하단 하얀상자 : 하얀 상자 자체-->
    <style name="MapOverlayBoxWhite">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/x_ffffff</item>
        <item name="android:padding">20dp</item>
    </style>


    <!-- 지도 UI 하단 검은상자 -->
    <style name="MapOverlayWhite" parent="TextBasic">
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
    </style>
    <!-- 지도 UI 하단 검은상자 : 타이틀 -->
    <style name="MapOverlayWhite.RegularHead" parent="MapOverlayWhite">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
    </style>
    <!-- 지도 UI 하단 검은상자 : 거리 -->
    <style name="MapOverlayWhite.RegularText" parent="MapOverlayWhite">
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
    </style>
    <!-- 지도 UI 하단 검은상자 : 주소 등  -->
    <style name="MapOverlayWhite.Light" parent="MapOverlayWhite">
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
        <item name="maxLines">2</item>
    </style>

    <style name="MapOverlayServiceNetwork">
        <item name="android:background">@drawable/ripple_bg_f8f8f8</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">gone</item>
    </style>



</resources>
