<resources>

    <!-- 서비스 메인 탭 텍스트 (정비/세차/대리) -->
    <style name="ServiceMainTabs" parent="TextBasic">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/selector_color_000000_b9b9b9</item>
    </style>

    <!-- 대리운전 항목 설명-->
    <style name="ServiceDriveDesc" parent="TextBasic">
        <item name="android:textColor">@color/x_aaabaf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="ServiceDriveDesc.light" parent="ServiceDriveDesc">
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
    </style>

    <style name="ServiceDriveDesc.regular" parent="ServiceDriveDesc">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
    </style>

    <!-- sonax 지점 검색 결과 없음   -->
    <style name="SonaxResult.NoResult" parent="TextBasic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/x_141414</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- 세차 예약 내역 : -->
    <style name="CarWashHistoryLight" parent="TextBasic">
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
        <item name="android:textColor">@color/x_000000</item>
    </style>
    <!-- 세차 예약 내역 : -->
    <style name="CarWashHistoryRegular" parent="TextBasic">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
        <item name="android:textColor">@color/x_000000</item>
    </style>

    <!-- 세차 예약 내역 : -->
    <style name="CarWashHistoryBtn" parent="TextBtnBasic">
        <item name="android:layout_width">0dp</item>
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
        <item name="android:textColor">@color/x_141414</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/ripple_bg_ffffff_stroke_6f6f6f</item>
        <item name="android:padding">18dp</item>
    </style>

    <!-- 차종코드 -->
    <style name="ServiceDrive.RegularHead" parent="TextBasic">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- 대리운전 light 폰트  -->
    <style name="ServiceDrive.Light" parent="TextBasic">
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
        <item name="android:textColor">@color/x_525252</item>
    </style>


    <!-- 대리운전 신청 페이지/신청 결과 페이지 : 신청 내역 버튼 -->
    <style name="ServiceDrive.History" parent="TextBtnBasic">
        <item name="android:text">@string/service_drive_01</item>
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/x_6f6f6f</item>
        <item name="android:background">@drawable/ripple_bg_ffffff</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <!-- 대리운전 신청 결과 출발/도착지 -->
    <style name="ServiceDriveReqResult.FromTo" parent="TextBasic">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="maxLines">2</item>
    </style>

    <!-- 대리운전 신청 결과 출발/도착지 이름  -->
    <style name="ServiceDriveReqResult.FromTo.Name" parent="ServiceDriveReqResult.FromTo">
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
    </style>

    <!-- 대리운전 신청 결과 출발/도착지 주소  -->
    <style name="ServiceDriveReqResult.FromTo.Address" parent="ServiceDriveReqResult.FromTo">
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
    </style>

    <!-- 대리운전 신청 결과 안내 -->
    <style name="ServiceDriveReqResult.Info" parent="TextBasic">
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <!-- 대리운전 신청 상태 배경 -->
    <style name="ServiceDriveReqResultStatusBackground">
        <item name="android:background">@color/x_f4f4f4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <!-- 대리운전 신청 상태 텍스트 -->
    <style name="ServiceDriveReqResult.Status.Text" parent="TextBasic">
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ServiceDriveReqResult.Status.Text.Light" parent="ServiceDriveReqResult.Status.Text">
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
    </style>

    <style name="ServiceDriveReqResult.Status.Text.Regular" parent="ServiceDriveReqResult.Status.Text">
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
    </style>


    <!-- 대리운전 신청내역 -->
    <!-- 패널, 데이터 이름 -->
    <style name="ServiceDrive.History.Data.Title" parent="TextBasic">
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
    </style>

    <!-- 패널, 데이터 값 -->
    <style name="ServiceDrive.History.Data.Desc" parent="TextBasic">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!-- 신청내역 펼쳤을 때 안내문구 세 줄 -->
    <style name="ServiceDrive.History.Noti" parent="TextBasic">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:textColor">@color/x_aaabaf</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
