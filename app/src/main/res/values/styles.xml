<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="TextInputLayout" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_ffffff_top_round_20</item>
    </style>


    <style name="CardViewTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    <style name="CustomTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">-->
    <!--        <item name="android:textColor">@drawable/selector_calendar</item>-->
    <!--    </style>-->
    <style name="calendarStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/selector_calendar</item>
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="calendarStyleHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="calendarStyleWeekend">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">18sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="calendarStyleWeekendValue">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/selector_calendar_weekend</item>
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextBasic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <!-- 서비스 정비 항목 클릭 영역-->
    <style name="ServiceMaintenanceItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/ripple_bg_ffffff_round_10</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- 서비스 정비 항목 텍스트 -->
    <style name="ServiceMaintenance" parent="TextBasic">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
    </style>

    <!-- 서비스 정비 항목 타이틀-->
    <style name="ServiceMaintenance.Title" parent="ServiceMaintenance">
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- 서비스 정비 항목 설명-->
    <style name="ServiceMaintenance.Desc" parent="ServiceMaintenance">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/x_aaabaf</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 대리운전 항목 설명-->
    <style name="ServiceDriveDesc" parent="TextBasic">
        <item name="android:textColor">@color/x_aaabaf</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ServiceDriveDesc.light" parent="ServiceDriveDesc">
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
    </style>

    <style name="ServiceDriveDesc.regular" parent="ServiceDriveDesc">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
    </style>

    <!-- sonax 지점 검색 결과 없음   -->
    <style name="SonaxResult.NoResult" parent="TextBasic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/x_141414</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- sonax 지점 검색 결과 타이틀 -->
    <style name="SonaxResult.Title" parent="TextBasic">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- sonax 지점 검색 결과 아이템 공통 -->
    <style name="SonaxResult.Item" parent="TextBasic">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/x_000000</item>
    </style>

    <!-- sonax 지점 검색 결과 아이템 (지점명, 거리) -->
    <style name="SonaxResult.Item.Regular" parent="SonaxResult.Item">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
    </style>
    <!-- sonax 지점 검색 결과 아이템 (주소, 동, 전화번호) -->
    <style name="SonaxResult.Item.light" parent="SonaxResult.Item">
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
    </style>

    <!-- sonax 지점을 지도에서 선택 -->
    <style name="SonaxResult.PickFromMap" parent="TextBasic">
        <item name="android:textColor">@color/x_ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- sonax 지점을 지도에서 선택 : 타이틀 -->
    <style name="SonaxResult.PickFromMap.Title" parent="SonaxResult.PickFromMap">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
    </style>
    <!-- sonax 지점을 지도에서 선택 : 거리 -->
    <style name="SonaxResult.PickFromMap.Distance" parent="SonaxResult.PickFromMap">
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
    </style>

    <!-- sonax 지점을 지도에서 선택 : 서비스내용 -->
    <style name="SonaxResult.PickFromMap.Service" parent="TextBasic">
        <item name="android:textColor">@color/x_cd9a81</item>
        <item name="android:textSize">13sp</item>
    </style>
    <!-- sonax 지점을 지도에서 선택 : 타이틀 -->
    <style name="SonaxResult.PickFromMap.Service.Title" parent="SonaxResult.PickFromMap.Service">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
    </style>
    <!-- sonax 지점을 지도에서 선택 : 거리 -->
    <style name="SonaxResult.PickFromMap.Service.List" parent="SonaxResult.PickFromMap.Service">
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
    </style>

    <!-- sonax 지점을 지도에서 선택 : 주소/전화 -->
    <style name="SonaxResult.PickFromMap.Contact" parent="SonaxResult.PickFromMap">
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
    </style>


</resources>
