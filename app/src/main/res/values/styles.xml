<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/x_ffffff</item>
        <item name="colorPrimaryDark">@color/x_ffffff</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--초기로딩시 검은 화면 없애기-->
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="TextInputLayout" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="android:statusBarColor">@color/x_ffffff</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_ffffff_top_round_20</item>
    </style>


    <style name="CardViewTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/x_ffffff</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/x_f8f8f8</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--        <item name="android:backgroundDimEnabled">true</item>-->
        <!--        <item name="android:windowIsTranslucent">true</item>-->
        <!--        <item name="android:windowBackground">@android:color/transparent</item>-->
    </style>

    <!--    <style name="CustomTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">-->
    <!--        <item name="android:textColor">@drawable/selector_calendar</item>-->
    <!--    </style>-->

    <!--weekday style-->
    <style name="calendarStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/selector_calendar</item>
        <item name="android:fontFamily">@font/medium_genesissanstextglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--년/월-->
    <style name="calendarStyleHeader">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--월화수목금토일 타이틀-->
    <style name="calendarStyleWeekendTitle">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">18dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--weekday style-->
    <style name="calendarStyleWeekend">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/selector_calendar</item>
    <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">16dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="TextBasic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextBtnBasic" parent="TextBasic">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="TextGoldCommon">
        <item name="android:background">@color/x_cd9a81</item>
        <item name="android:textColor">@color/x_ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
        <item name="android:textSize">10dp</item>
    </style>




</resources>
