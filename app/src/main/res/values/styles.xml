<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="TextInputLayout" parent="Theme.MaterialComponents.Light.NoActionBar"/>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_ffffff_top_round_20</item>
    </style>


    <style name="CardViewTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<!--    <style name="CustomTextAppearance" parent="TextAppearance.MaterialCalendarWidget.Date">-->
<!--        <item name="android:textColor">@drawable/selector_calendar</item>-->
<!--    </style>-->
    <style name="calendarStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/selector_calendar</item>
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="calendarStyleHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="calendarStyleWeekend">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">18sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="calendarStyleWeekendValue">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/selector_calendar_weekend</item>
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">16sp</item>
        <item name="android:gravity">center</item>
    </style>




    <!-- 서비스 정비 항목 클릭 영역-->
    <style name="ServiceMaintenanceItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/ripple_bg_ffffff_round_10</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- 서비스 정비 항목 타이틀-->
    <style name="ServiceMaintenanceTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- 서비스 정비 항목 설명-->
    <style name="ServiceMaintenanceDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textColor">@color/x_aaabaf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
        <item name="android:letterSpacing">-0.01</item>

        <!--TODO : 항목 별 desc 밑에 여백 좁아서 0으로 해둠(원래 6)-->
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:clickable">false</item>
    </style>

    <!-- 서비스 정비 항목 아이콘 -->
    <style name="ServiceMaintenanceIcon">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:clickable">false</item>
    </style>


    <!-- 대리운전 항목 설명-->
    <style name="ServiceDriveDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/x_aaabaf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="ServiceDriveDesc.light" parent="ServiceDriveDesc">
        <item name="android:fontFamily">@font/light_genesissansheadglobal</item>
    </style>

    <style name="ServiceDriveDesc.regular" parent="ServiceDriveDesc">
        <item name="android:fontFamily">@font/regular_genesissansheadglobal</item>
    </style>

    <!-- sonax 지점 검색 결과 없음   -->
    <style name="SonaxNoResult">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/x_141414</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
