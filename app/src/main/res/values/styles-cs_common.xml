<resources>

    <!-- 입력레이아웃의 안내 메시지 타이틀 ex)xxx를 입력해주세요.-->
    <style name="CommonTextMsg" parent="ViewMsgInputTile">
        <item name="android:paddingBottom">30dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>


    <!-- Spinner 레이아웃 및 뷰-->
    <style name="CommonSpinnerLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="CommonSpinnerTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">9dp</item>
        <item name="android:textColor">@color/x_262626</item>
        <item name="android:textSize">13dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="CommonSpinnerItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/x_a2a2a2</item>
        <item name="android:textSize">15dp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:background">@drawable/ripple_bg_ffffff_stroke_e5e5e5</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawableRight">@drawable/btn_dropdown</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="CommonSpinnerItemDisable" parent="CommonSpinnerItem">
        <item name="android:textColor">@color/x_a2a2a2</item>
        <item name="android:background">@drawable/ripple_bg_ffffff_stroke_e5e5e5</item>
    </style>

    <style name="CommonSpinnerItemEnable" parent="CommonSpinnerItem">
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:background">@drawable/ripple_bg_ffffff_stroke_000000</item>
    </style>

    <style name="CommonSpinnerItemReject" parent="CommonSpinnerItem">
        <item name="android:textColor">@color/x_525252</item>
        <item name="android:background">@drawable/bg_f5f6f8_stroke_e5e5e5</item>
    </style>


    <style name="CalendarSpinnerItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawableRight">@drawable/ic_calendar</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>


    <style name="CommonSpinnerItemCalendar" parent="CalendarSpinnerItem">
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:background">@drawable/ripple_bg_ffffff_stroke_000000</item>
    </style>

    <style name="CommonSpinnerItemCalendarDisable" parent="CalendarSpinnerItem">
        <item name="android:textColor">@color/x_a2a2a2</item>
        <item name="android:background">@drawable/ripple_bg_ffffff_stroke_e5e5e5</item>
    </style>

    <style name="CommonSpinnerItemCalendarError" parent="CalendarSpinnerItem">
        <item name="android:textColor">@color/x_a2a2a2</item>
        <item name="android:background">@drawable/ripple_bg_ffffff_stroke_ce2d2d</item>
    </style>


    <style name="CommonSpinnerError">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:textColor">@color/x_ce2d2d</item>
        <item name="android:textSize">12dp</item>
        <item name="android:visibility">invisible</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="CommonInputItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@drawable/btn_arrow_open_r</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="CommonInputItemDisable" parent="CommonInputItem">
        <item name="android:background">@drawable/ripple_bg_ffffff_stroke_e5e5e5</item>
        <item name="android:textColor">@color/x_a2a2a2</item>
    </style>

    <style name="CommonInputItemEnable" parent="CommonInputItem">
        <item name="android:background">@drawable/ripple_bg_ffffff_stroke_000000</item>
        <item name="android:textColor">@color/x_000000</item>
    </style>

    <style name="CommonInputItemError" parent="CommonInputItem">
        <item name="android:background">@drawable/ripple_bg_ffffff_stroke_ce2d2d</item>
        <item name="android:textColor">@color/x_a2a2a2</item>
    </style>


    <!--EditText 레이아웃 및 뷰-->
    <style name="CommonTextInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="boxBackgroundColor">@color/x_ffffff</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxStrokeColor">@color/x_000000</item>
        <item name="boxStrokeErrorColor">@color/x_ce2d2d</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconTint">@color/x_ce2d2d</item>
        <item name="errorTextColor">@color/x_ce2d2d</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/x_000000</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="hintTextAppearance">@style/CommonTextInputEditTextHint</item>
        <item name="placeholderTextAppearance">@style/CommonTextInputEditTextHint</item>
        <item name="errorTextAppearance">@style/CommonTextInputEditTextError</item>
    </style>

    <style name="CommonTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:textCursorDrawable">@drawable/cursor_141414</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="CommonTextInputEditTextHint">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/x_262626</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
    </style>

    <style name="CommonTextInputEditTextError">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/x_ce2d2d</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
    </style>


    <!-- 수정불가한 텍스트 뷰-->
    <style name="CommonTextViewFix">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:background">@drawable/bg_f5f6f8_stroke_e5e5e5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:textSize">15dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <!-- 수정불가한 텍스트 뷰-->
    <style name="CommonTextViewFix2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:background">@color/x_f8f8f8</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:textSize">14dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="CommonLoadingErrorText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:lineSpacingExtra">16dp</item>
        <item name="android:text">@string/word_home_32</item>
        <item name="android:textColor">@color/x_ce2d2d</item>
        <item name="android:textSize">12dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CommonLoadingRetryText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/bg_00000000_underline_000000</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:lineSpacingExtra">38dp</item>
        <item name="android:text">@string/word_home_33</item>
        <item name="android:textColor">@color/x_000000</item>
        <item name="android:textSize">14dp</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="MainHomeBadgeSOS">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">9dp</item>
        <item name="android:paddingEnd">9dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">@color/x_ffffff</item>
        <item name="android:background">@color/x_ce2d2d</item>
        <item name="android:textSize">12dp</item>
        <item name="android:text">@string/gm01_repair_status_1</item>
    </style>



    <style name="MainHomeBadgeRpar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:fontFamily">@font/regular_genesissanstextglobal</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/x_996449</item>
    </style>




</resources>
