<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/x_ffffff"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="30dp"
        android:paddingEnd="15dp"
        android:paddingBottom="29dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/x_141414"
            android:textSize="20dp"
            android:text="@string/sm_romte_p01_1"/>


        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="40dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_info"
                    style="@style/ViewMsgInputSub"
                    android:text="@string/sm_romte_p01_2"
                    android:textColor="@color/x_000000"
                    android:textSize="16dp"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_mark_1"
                    style="@style/ViewMarkBlack"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_info_1" />

                <TextView
                    android:id="@+id/tv_info_1"
                    style="@style/ViewMsgInputSub"
                    android:layout_width="wrap_content"
                    android:text="@string/sm_romte_p01_3"
                    android:textColor="@color/x_000000"
                    android:textSize="16dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toEndOf="@+id/tv_mark_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_info"/>

                <TextView
                    android:id="@+id/tv_info_1_1"
                    style="@style/ViewMsgInputSub"
                    android:layout_width="wrap_content"
                    android:text="@string/sm_romte_p01_3_1"
                    android:textColor="@color/x_000000"
                    android:textSize="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="6dp"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/tv_info_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_info"/>

                <TextView
                    android:id="@+id/tv_mark_2"
                    style="@style/ViewMarkBlack"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_info_2" />

                <TextView
                    android:id="@+id/tv_info_2"
                    style="@style/ViewMsgInputSub"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="@string/sm_romte_p01_4"
                    android:textColor="@color/x_000000"
                    android:textSize="16dp"
                    app:layout_constraintStart_toEndOf="@+id/tv_mark_2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_info_1_1" />


                <TextView
                    android:id="@+id/tv_info_2_1"
                    style="@style/ViewMsgInputSub"
                    android:layout_width="wrap_content"
                    android:text="@string/sm_romte_p01_4_1"
                    android:textColor="@color/x_000000"
                    android:textSize="16dp"
                    android:layout_marginStart="6dp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/tv_info_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_info_2"/>

                <ImageView
                    android:id="@+id/iv_line_1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/x_e5e5e5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_info_2_1"/>


                <TextView
                    android:id="@+id/tv_mark_4"
                    style="@style/ViewMarkBlack"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_info_4" />

                <TextView
                    android:id="@+id/tv_info_4"
                    style="@style/ViewMsgInputSub"
                    android:layout_marginTop="20dp"
                    android:text="@string/sm_romte_p01_5"
                    android:textColor="@color/x_525252"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mark_4"
                    app:layout_constraintTop_toBottomOf="@+id/iv_line_1" />


                <TextView
                    android:id="@+id/tv_mark_5"
                    style="@style/ViewMarkBlack"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_info_5" />

                <TextView
                    android:id="@+id/tv_info_5"
                    style="@style/ViewMsgInputSub"
                    android:layout_marginTop="12dp"
                    android:text="@string/sm_romte_p01_6"
                    android:textColor="@color/x_525252"
                    android:textSize="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mark_5"
                    app:layout_constraintTop_toBottomOf="@+id/tv_info_4" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_bg_ffffff_stroke_111111"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="6dp"
                android:text="@string/dialog_common_7"
                android:textColor="@color/x_141414"
                android:visibility="visible"
                android:textSize="16dp"/>


            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_bg_111111"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="6dp"
                android:text="@string/dialog_common_4"
                android:textColor="@color/x_ffffff"
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>
</layout>