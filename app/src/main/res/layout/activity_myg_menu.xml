<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/x_ffffff">

        <include
            android:id="@+id/l_title"
            layout="@layout/layout_titlebar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:value="@{@string/mg00_word_1}"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/l_search"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:hintEnabled="false"
            app:counterEnabled="false"
            app:hintAnimationEnabled="false"
            app:endIconMode="clear_text"
            app:layout_constraintTop_toBottomOf="@+id/l_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:hint="@string/mg00_msg_1"
                android:textColorHint="@color/x_aaabaf"
                android:background="@drawable/bg_ffffff_stroke_dadde3"
                android:textSize="15sp"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="6sp"/>
        </com.google.android.material.textfield.TextInputLayout>








