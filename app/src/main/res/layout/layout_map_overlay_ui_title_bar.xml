<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_map_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        tools:background="#a0f040">

        <!-- 백 버튼 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_map_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/x_ffffff"
            android:outlineSpotShadowColor="#33000000"
            android:src="@drawable/btn_back"
            app:backgroundTint="@color/x_ffffff"
            app:borderWidth="2dp"
            app:elevation="2dp"
            app:fabSize="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 검색하세요 버튼 -->
        <TextView
            android:id="@+id/tv_map_title_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ripple_bg_ffffff_round_99"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/regular_genesissansheadglobal"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="@{title}"
            android:textColor="@color/x_aaabaf"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/fab_map_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/fab_map_back"
            app:layout_constraintTop_toTopOf="@id/fab_map_back"
            tools:text="@string/map_title_1" />

        <!-- 오른쪽 ">" -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_open_r"
            app:layout_constraintBottom_toBottomOf="@id/tv_map_title_text"
            app:layout_constraintEnd_toEndOf="@id/tv_map_title_text"
            app:layout_constraintTop_toTopOf="@id/tv_map_title_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>