<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.genesis.apps.ui.main.service.FragmentCarWash" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/x_f4f4f4"
        android:orientation="vertical">

        <include
            android:id="@+id/l_service_car_wash_history_btn"
            layout="@layout/layout_service_car_wash_top_panel" />

        <!--  아이템으로 사용되는 뷰 파일 : layout_service_car_wash_item -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_service_car_wash_item_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp"
            tools:background="#a0f040"
            tools:listitem="@layout/layout_service_car_wash_item" />

    </LinearLayout>
</layout>