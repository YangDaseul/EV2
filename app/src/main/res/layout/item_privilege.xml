        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_vin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@color/x_f8f8f8"
            app:layout_constraintTop_toBottomOf="@+id/tv_engine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <TextView
                android:id="@+id/tv_title_vin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="9dp"
                android:textColor="@color/x_000000"
                android:textSize="14dp"
                android:text="@string/mg_prvi01_word_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>


            <TextView
                android:id="@+id/tv_vin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:letterSpacing="-0.01"
                android:textColor="@color/x_4d4d4d"
                android:textSize="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_title_vin"
                app:layout_constraintHorizontal_bias="0"
                tools:text="15487ABD45782"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/btn_apply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:gravity="center"
            android:background="@drawable/ripple_bg_000000"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6dp"
            android:text="@string/mg_prvi01_word_1_4"
            android:textColor="@color/x_ffffff"
            android:textSize="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/cl_vin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/btn_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:gravity="center"
            android:background="@drawable/ripple_bg_ffffff_stroke_111111"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6dp"
            android:text="@string/mg_prvi01_word_5"
            android:textColor="@color/x_000000"
            android:textSize="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/cl_vin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
