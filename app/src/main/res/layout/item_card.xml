<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_ffffff_top_round_10_stroke_e5e5e5">


        <ImageView
            android:id="@+id/iv_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/img_card_320"/>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_vertical_car"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="@+id/iv_card"
            app:layout_constraintBottom_toBottomOf="@+id/iv_card"
            app:layout_constraintGuide_begin="0dp"
            app:layout_constraintGuide_end="300dp"/>


        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"
            tools:src="@drawable/ic_star_card"/>


        <TextView
            android:id="@+id/tv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/regular_genesissansheadglobal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/x_996449"
            android:textSize="12dp"
            android:text="@string/mg_member01_15"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/iv_favorite"
            app:layout_constraintBottom_toBottomOf="@+id/iv_favorite"
            app:layout_constraintEnd_toStartOf="@+id/iv_favorite"
            tools:visibility="visible"/>


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/regular_genesissansheadglobal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/x_996449"
            android:textSize="12dp"
            android:text="@string/mg_member01_14"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"/>


        <TextView
            android:id="@+id/tv_card_no_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="70dp"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/x_ffffff"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_card"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="2165-1231-1231-4564" />

<!--        <TextView-->
<!--            android:id="@+id/tv_card_date"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginRight="20dp"-->
<!--            android:layout_marginBottom="25dp"-->
<!--            android:fontFamily="@font/regular_genesissansheadglobal"-->
<!--            android:letterSpacing="-0.01"-->
