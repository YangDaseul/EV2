<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/x_ffffff">

        <include
            android:id="@+id/l_title"
            layout="@layout/layout_titlebar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_greetings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/bold_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="-4sp"
                    android:text="Hello."
                    android:textColor="@color/x_141414"
                    android:textSize="20sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/regular_genesissansheadglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="-2sp"
                    android:maxLines="1"
                    android:textColor="@color/x_141414"
                    android:textSize="18sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toStartOf="@+id/btn_my_info"
                    app:layout_constraintStart_toStartOf="@+id/tv_greetings"
                    app:layout_constraintTop_toBottomOf="@+id/tv_greetings"
                    tools:text="김수현 님" />

                <TextView
                    android:id="@+id/btn_my_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ffffff_underline_6f6f6f"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/word_home_1"
                    android:textColor="@color/x_6f6f6f"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_name"
                    app:layout_constraintEnd_toEndOf="@+id/tv_greetings" />

                <TextView
                    android:id="@+id/tv_mail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="2sp"
                    android:maxLines="1"
                    android:textColor="@color/x_525252"
                    android:textSize="14sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="@+id/tv_greetings"
                    app:layout_constraintStart_toStartOf="@+id/tv_greetings"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name"
                    tools:text="kim.genesis@genesis.com" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/bg_f4f4f4_top_round_20_shadow_33000000"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mail"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:id="@+id/tv_title_membership"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular_genesissansheadglobal"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="0sp"
                        android:text="@string/word_home_2"
                        android:textColor="@color/x_000000"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/l_point"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:background="@drawable/bg_ffffff_stroke_e2e2e2"
                        app:layout_constraintTop_toBottomOf="@+id/tv_title_membership"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <TextView
                            android:id="@+id/tv_title_point"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular_genesissansheadglobal"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="4sp"
                            android:text="@string/word_home_3"
                            android:textColor="@color/x_000000"
                            android:textSize="14sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>


                        <TextView
                            android:id="@+id/tv_point"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular_genesissansheadglobal"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="0sp"
                            android:textColor="@color/x_cd9a81"
                            android:textSize="16sp"
                            android:gravity="right"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintStart_toEndOf="@+id/tv_title_point"
                            app:layout_constraintEnd_toStartOf="@+id/iv_arrow_point"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="1"
                            tools:text="32,450 P"/>


                        <ImageView
                            android:id="@+id/iv_arrow_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:src="@drawable/btn_open_r"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/l_mobility_care"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:background="@drawable/bg_ffffff_stroke_e2e2e2"
                        app:layout_constraintTop_toBottomOf="@+id/l_point"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <TextView
                            android:id="@+id/tv_title_mobility_care"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular_genesissansheadglobal"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="4sp"
                            android:text="@string/word_home_4"
                            android:textColor="@color/x_000000"
                            android:textSize="14sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>


                        <TextView
                            android:id="@+id/tv_mobility_care"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular_genesissansheadglobal"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="0sp"
                            android:textColor="@color/x_cd9a81"
                            android:textSize="16sp"
                            android:gravity="right"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintStart_toEndOf="@+id/tv_title_mobility_care"
                            app:layout_constraintEnd_toStartOf="@+id/iv_arrow_mobility_care"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="1"
                            tools:text="3"/>


                        <ImageView
                            android:id="@+id/iv_arrow_mobility_care"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="centerInside"
                            android:src="@drawable/btn_open_r"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>





                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/l_privilege"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="6dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:background="@drawable/bg_ffffff_stroke_e2e2e2"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/l_mobility_care"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/tv_title_privilege"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular_genesissansheadglobal"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="4sp"
                            android:text="@string/word_home_5"
                            android:textColor="@color/x_000000"
                            android:textSize="14sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                        <TextView
                            android:id="@+id/btn_apply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:background="@color/x_000000"
                            android:fontFamily="@font/regular_genesissansheadglobal"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="6sp"
                            android:text="@string/word_home_6"
                            android:textColor="@color/x_ffffff"
                            android:textSize="12sp"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:visibility="gone"/>


                        <TextView
                            android:id="@+id/btn_car_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:background="@color/x_000000"
                            android:fontFamily="@font/regular_genesissansheadglobal"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="6sp"
                            android:text="@string/word_home_20"
                            android:textColor="@color/x_ffffff"
                            android:textSize="12sp"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>



                        <TextView
                            android:id="@+id/btn_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:background="@color/x_000000"
                            android:fontFamily="@font/regular_genesissansheadglobal"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="6sp"
                            android:text="@string/word_home_22"
                            android:textColor="@color/x_ffffff"
                            android:textSize="12sp"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:visibility="visible"/>

                        <TextView
                            android:id="@+id/btn_benefit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="7dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:background="@color/x_000000"
                            android:fontFamily="@font/regular_genesissansheadglobal"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="6sp"
                            android:text="@string/word_home_21"
                            android:textColor="@color/x_ffffff"
                            android:textSize="12sp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toStartOf="@+id/btn_status"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:visibility="visible"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <TextView
                        android:id="@+id/tv_title_oil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/regular_genesissansheadglobal"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="0sp"
                        android:text="@string/word_home_7"
                        android:textColor="@color/x_000000"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/l_privilege"/>


                    <TextView
                        android:id="@+id/tv_oil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/regular_genesissansheadglobal"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="0sp"
                        android:textColor="@color/x_cd9a81"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/tv_title_oil"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_title_oil"
                        tools:text="3"/>



                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>