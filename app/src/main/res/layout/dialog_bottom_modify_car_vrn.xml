<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingTop="40dp"
        android:paddingRight="30dp"
        android:paddingBottom="20dp">

        <include
            android:id="@+id/l_title"
            layout="@layout/layout_titlebar_dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:value="@{@string/gm_carlst_p01_1}"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/l_edit"
            style="@style/CommonTextInputLayout"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/l_title"
            android:visibility="visible">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_car_rgst_no"
                style="@style/CommonTextInputEditText"
                android:hint="@string/gm_carlst_p01_2" />
            <requestFocus />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/iv_dot_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rect_aaabaf_2dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_warning_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_warning_1"/>

        <TextView
            android:id="@+id/tv_warning_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6dp"
            android:text="@string/gm_carlst_p01_4"
            android:textColor="@color/x_aaabaf"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_dot_1"
            app:layout_constraintTop_toBottomOf="@+id/l_edit" />


        <ImageView
            android:id="@+id/iv_dot_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rect_aaabaf_2dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_warning_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_warning_2"/>

        <TextView
            android:id="@+id/tv_warning_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6dp"
            android:text="@string/gm_carlst_p01_5"
            android:textColor="@color/x_aaabaf"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_dot_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_warning_1" />


        <ImageView
            android:id="@+id/iv_dot_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rect_aaabaf_2dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_warning_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_warning_3"/>

        <TextView
            android:id="@+id/tv_warning_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6dp"
            android:text="@string/gm_carlst_p01_6"
            android:textColor="@color/x_aaabaf"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_dot_3"
            app:layout_constraintTop_toBottomOf="@+id/tv_warning_2"/>

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="0dp"
            android:text="@string/gm_carlst_p01_3"
            android:textColor="@color/x_ffffff"
            android:textSize="16dp"
            android:background="@drawable/ripple_bg_000000"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_warning_3"/>





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>