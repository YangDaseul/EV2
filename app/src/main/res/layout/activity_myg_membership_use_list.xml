<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activity"
            type="com.genesis.apps.ui.myg.MyGMembershipUseListActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/x_ffffff">

        <include
            android:id="@+id/l_title"
            layout="@layout/layout_titlebar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:value="@{@string/mg_member04_1}" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/l_point_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_ffffff_stroke_e2e2e2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_title">


            <TextView
                android:id="@+id/tv_title_point_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/light_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="4sp"
                android:text="@string/mg_member04_2"
                android:textColor="@color/x_000000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/line_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_point_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/regular_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="-9sp"
                android:textColor="@color/x_000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_point_save_unit"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_point_save"
                tools:text="2,750" />

            <TextView
                android:id="@+id/tv_point_save_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/regular_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="-6sp"
                android:text="P"
                android:textColor="@color/x_000000"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_point_save"
                app:layout_constraintEnd_toEndOf="@+id/line_vertical"
                app:layout_constraintStart_toEndOf="@+id/tv_point_save" />


            <View
                android:id="@+id/line_vertical"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/x_e2e2e2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_title_point_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/light_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="4sp"
                android:text="@string/mg_member04_3"
                android:textColor="@color/x_000000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/line_vertical"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_point_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/regular_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="-9sp"
                android:textColor="@color/x_cd9a81"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_point_use_unit"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@+id/line_vertical"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_point_use"
                tools:text="2,750" />

            <TextView
                android:id="@+id/tv_point_use_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/regular_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="-6sp"
                android:text="P"
                android:textColor="@color/x_cd9a81"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_point_use"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_point_use" />




            <TextView
                android:id="@+id/tv_empty"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:background="@color/x_ffffff"
                android:fontFamily="@font/regular_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="2sp"
                android:text="@string/mg_member04_13"
                android:textColor="@color/x_000000"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:visibility="visible"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:background="@color/x_f4f4f4"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/r_group"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_point_info"
            tools:listitem="@layout/item_use_point" />


        <RadioGroup
            android:id="@+id/r_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintTop_toBottomOf="@+id/rv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_start_date">


            <RadioButton
                android:id="@+id/r_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_date"
                android:button="@null"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:gravity="center"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="6sp"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:paddingRight="25dp"
                android:paddingBottom="15dp"
                android:text="@string/mg_member04_8"
                android:textColor="@color/x_000000"
                android:textSize="15sp"
                android:onClick="@{(view)->activity.setDateAuto(view)}"
                tools:checked="true" />


            <RadioButton
                android:id="@+id/r_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/selector_date"
                android:button="@null"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:gravity="center"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="6sp"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:paddingRight="25dp"
                android:paddingBottom="15dp"
                android:text="@string/mg_member04_9"
                android:textColor="@color/x_000000"
                android:textSize="15sp"
                android:onClick="@{(view)->activity.setDateAuto(view)}"/>


            <RadioButton
                android:id="@+id/r_30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/selector_date"
                android:button="@null"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:gravity="center"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="6sp"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:paddingRight="25dp"
                android:paddingBottom="15dp"
                android:text="@string/mg_member04_10"
                android:textColor="@color/x_000000"
                android:textSize="15sp"
                android:onClick="@{(view)->activity.setDateAuto(view)}"/>


            <RadioButton
                android:id="@+id/r_180"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/selector_date"
                android:button="@null"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:gravity="center"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="6sp"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:paddingRight="25dp"
                android:paddingBottom="15dp"
                android:text="@string/mg_member04_11"
                android:textColor="@color/x_000000"
                android:textSize="15sp"
                android:onClick="@{(view)->activity.setDateAuto(view)}"/>
        </RadioGroup>



        <TextView
            android:id="@+id/btn_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@drawable/ripple_bg_f4f4f4"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:gravity="center_vertical|left"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/x_525252"
            android:textSize="15sp"
            android:drawableRight="@drawable/ic_calendar"
            android:onClick="@{(view)->activity.onSingleClickListener.onClick(view)}"
            app:layout_constraintStart_toStartOf="@+id/r_group"
            app:layout_constraintEnd_toStartOf="@+id/btn_end_date"
            app:layout_constraintTop_toBottomOf="@+id/r_group"
            app:layout_constraintBottom_toBottomOf="@+id/btn_query"
            tools:text="2020.07.29"/>

        <TextView
            android:id="@+id/btn_end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:background="@drawable/ripple_bg_f4f4f4"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:gravity="center_vertical|left"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/x_525252"
            android:textSize="15sp"
            android:drawableRight="@drawable/ic_calendar"
            android:onClick="@{(view)->activity.onSingleClickListener.onClick(view)}"
            app:layout_constraintStart_toEndOf="@+id/btn_start_date"
            app:layout_constraintTop_toTopOf="@+id/btn_start_date"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="2020.07.30"/>



        <TextView
            android:id="@+id/btn_query"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_margin="20dp"
            android:background="@color/x_141414"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:textColor="@color/x_ffffff"
            android:textSize="16sp"
            android:text="@string/mg_member04_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_start_date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="@{(view)->activity.onSingleClickListener.onClick(view)}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>