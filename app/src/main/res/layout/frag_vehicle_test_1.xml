<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/x_00000000">


<!--        <androidx.constraintlayout.widget.Guideline-->
<!--            android:id="@+id/guide_v"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:orientation="vertical"-->
<!--            app:layout_constraintGuide_percent="0.352" />-->

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_h"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.86" />


        <ImageView
            android:id="@+id/iv_car_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/car_bottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guide_h3"/>

            <ImageView
                android:id="@+id/iv_car_bottom_shade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/car_bottom_shade"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guide_h3"/>


        <ImageView
            android:id="@+id/iv_car"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/car_3"
            app:layout_constraintBottom_toTopOf="@+id/guide_h"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".35"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".86"
            />


        <ImageView
            android:id="@+id/iv_car_shade"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/car_shade"
            app:layout_constraintBottom_toTopOf="@+id/guide_h"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent=".35"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".93"
            />

        <ImageView
            android:id="@+id/iv_car_light"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/car_light"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent=".91"
            app:layout_constraintTop_toBottomOf="@+id/guide_h2" />



        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.25"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_speed="0.6"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/rainfall_project2" />

        <ImageView
            android:id="@+id/iv_ui"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:scaleType="fitXY"
            android:background="@drawable/ui_mob" />




        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_h3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.71" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_h2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.51" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>