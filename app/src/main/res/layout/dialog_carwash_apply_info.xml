<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/x_ffffff"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="30dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="10dp"
            android:textColor="@color/x_000000"
            android:textSize="20dp"
            android:text="@string/cw_reserve_title"/>


        <TextView
            android:id="@+id/tv_contetns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/x_000000"
            android:textSize="16dp"
            tools:text="GV80 세차 서비스를 신청하시겠습니까?"/>


        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="18dp"
                android:paddingBottom="32dp"
                android:background="@drawable/bg_ffffff_stroke_e5e5e5">

                <TextView
                    android:id="@+id/tv_brnh_nm"
                    style="@style/ViewMsgInputSub"
                    android:textColor="@color/x_ffffff"
                    android:textSize="11dp"
                    android:fontFamily="@font/regular_genesissansheadglobal"
                    android:gravity="center"
                    android:lineSpacingExtra="11dp"
                    android:background="@color/x_111111"
                    android:includeFontPadding="false"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="소낙스 서비스점 서울 영등포점"/>

                <TextView
                    android:id="@+id/tv_mark_1"
                    style="@style/ViewMarkBlack"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_info_1" />

                <TextView
                    android:id="@+id/tv_info_1"
                    style="@style/ViewMsgInputSub"
                    android:layout_marginTop="20dp"
                    android:text="@string/cw_reserve_msg_1"
                    android:textColor="@color/x_000000"
                    android:textSize="14dp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mark_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_brnh_nm" />


                <ImageView
                    android:id="@+id/iv_line_1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/x_e5e5e5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_info_1"/>


                <TextView
                    android:id="@+id/tv_mark_4"
                    style="@style/ViewMarkBlack"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_info_4" />

                <TextView
                    android:id="@+id/tv_info_4"
                    style="@style/ViewMsgInputSub"
                    android:layout_marginTop="20dp"
                    android:text="@string/cw_reserve_msg_2"
                    android:textColor="@color/x_757575"
                    android:textSize="14dp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mark_4"
                    app:layout_constraintTop_toBottomOf="@+id/iv_line_1" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_bg_ffffff_stroke_111111"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="6dp"
                android:text="@string/dialog_common_1"
                android:textColor="@color/x_000000"
                android:visibility="visible"
                android:textSize="16dp"/>


            <TextView
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/ripple_bg_111111"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="6dp"
                android:text="@string/dialog_common_2"
                android:textColor="@color/x_ffffff"
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>
</layout>