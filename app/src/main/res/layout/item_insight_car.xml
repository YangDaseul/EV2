<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_car_expn_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_bg_ffffff_round_10"
        android:layout_margin="5dp"
        android:elevation="2dp"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <TextView
            android:id="@+id/tv_curr_mth_amt_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:lineSpacingExtra="6dp"
            android:textColor="@color/x_141414"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/tm01_1_1" />

        <TextView
            android:id="@+id/tv_curr_mth_amt_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:lineSpacingExtra="6dp"
            android:textColor="@color/x_141414"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_curr_mth_amt_1"
            app:layout_constraintBottom_toBottomOf="@+id/tv_curr_mth_amt"
            android:text="@string/tm01_1_2" />


        <TextView
            android:id="@+id/tv_curr_mth_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/regular_genesissansheadglobal"
            android:lineSpacingExtra="6dp"
            android:textColor="@color/x_a36b4f"
            android:textSize="24dp"
            app:layout_constraintStart_toEndOf="@+id/tv_curr_mth_amt_2"
            app:layout_constraintTop_toBottomOf="@+id/tv_curr_mth_amt_1"
            tools:text="451,900" />

        <TextView
            android:id="@+id/tv_curr_mth_amt_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:lineSpacingExtra="6dp"
            android:textColor="@color/x_141414"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/tv_curr_mth_amt"
            app:layout_constraintTop_toBottomOf="@+id/tv_curr_mth_amt_1"
            app:layout_constraintBottom_toBottomOf="@+id/tv_curr_mth_amt"
            android:text="@string/tm01_1_3" />

        <TextView
            android:id="@+id/tv_prvs_mth_amt_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:lineSpacingExtra="19dp"
            android:textColor="@color/x_141414"
            android:textSize="11dp"
            android:drawableLeft="@drawable/mark_000000"
            android:drawablePadding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_curr_mth_amt"
            app:layout_constraintBottom_toBottomOf="@+id/tv_prvs_mth_amt"
            android:text="@string/tm01_2_1" />

        <TextView
            android:id="@+id/tv_prvs_mth_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/regular_genesissansheadglobal"
            android:lineSpacingExtra="16dp"
            android:textColor="@color/x_141414"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/tv_prvs_mth_amt_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_curr_mth_amt"
            tools:text="350,000" />

        <TextView
            android:id="@+id/tv_prvs_mth_amt_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="2dp"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:lineSpacingExtra="19dp"
            android:textColor="@color/x_141414"
            android:textSize="11dp"
            app:layout_constraintStart_toEndOf="@+id/tv_prvs_mth_amt"
            app:layout_constraintTop_toBottomOf="@+id/tv_curr_mth_amt"
            app:layout_constraintBottom_toBottomOf="@+id/tv_prvs_mth_amt"
            android:text="@string/tm01_2_2" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintDimensionRatio="1.5:1"
            app:layout_constraintTop_toBottomOf="@+id/tv_prvs_mth_amt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

