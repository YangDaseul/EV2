<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isRound"
            type="boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@{isRound?@drawable/bg_f4f4f4_round_10:@drawable/bg_f4f4f4}"
        android:paddingStart="15dp"
        android:paddingTop="20dp"
        android:paddingEnd="15dp"
        android:paddingBottom="20dp"
        tools:background="#aaff88">

        <!-- 차종 -->
        <TextView
            android:id="@+id/tv_service_req_car_model"
            style="@style/ServiceDrive.RegularHead"
            app:layout_constraintBottom_toTopOf="@id/tv_service_req_car_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="GV 70" />

        <!-- 번호판 -->
        <TextView
            android:id="@+id/tv_service_req_car_number"
            style="@style/ServiceReq.Light"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_service_req_car_model"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="123너 6456" />

        <!-- 로딩중/예상가격/서비스불가안내 등  -->
        <!-- layout_service_req_
             _loading, _price, _cant_service, _retry   -->
        <ViewStub
            android:id="@+id/vs_service_req_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inflatedId="@+id/vs_service_req_status"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--     미리보기용 임시 뷰 : ViewStub은 xml미리보기가 안 돼서 -->
        <!--    <include-->
        <!--        layout="@layout/layout_service_req_price"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_marginEnd="20dp"-->
        <!--        app:layout_constraintBottom_toBottomOf="parent"-->
        <!--        app:layout_constraintEnd_toEndOf="parent"-->
        <!--        app:layout_constraintTop_toTopOf="parent" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>