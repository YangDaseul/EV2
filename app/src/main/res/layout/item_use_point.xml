<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_whole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ffffff_underline_e2e2e2"
        android:layout_marginBottom="4dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <TextView
            android:id="@+id/tv_asnnm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular_genesissansheadglobal"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/x_000000"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="(주) 염리점현대자동차" />


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:lineSpacingExtra="4sp"
            android:maxLines="1"
            android:textColor="@color/x_000000"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_asnnm"
            tools:text="2020.08.20" />



        <TextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:fontFamily="@font/regular_genesissansheadglobal"
            android:lineSpacingExtra="1sp"
            android:letterSpacing="-0.01"
            android:textColor="@color/x_000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_unit"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_asnnm"
            tools:text="1,600"/>

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular_genesissansheadglobal"
            android:lineSpacingExtra="4sp"
            android:textColor="@color/x_000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_asnnm"
            tools:text="@string/mg_member04_6"/>



        <TextView
            android:id="@+id/tv_remind_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:fontFamily="@font/regular_genesissansheadglobal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="1sp"
            android:textColor="@color/x_525252"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/tv_unit"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_date"
            tools:text="1,600"/>

        <TextView
            android:id="@+id/tv_remind_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular_genesissansheadglobal"
            android:lineSpacingExtra="4sp"
            android:letterSpacing="-0.01"
            android:textColor="@color/x_525252"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_date"
            tools:text="@string/mg_member04_6"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>