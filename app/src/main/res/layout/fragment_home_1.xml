<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="weatherCode"
            type="com.genesis.apps.comm.model.constants.WeatherCodes" />

        <variable
            name="activity"
            type="com.genesis.apps.ui.main.MainActivity" />

        <variable
            name="fragment"
            type="com.genesis.apps.ui.main.home.FragmentHome1" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/x_ffffff">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/exoPlayerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_car_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/car_bottom_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/iv_car_bottom_shade"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/car_bottom_shadow_2"
            app:layout_constraintBottom_toBottomOf="@+id/iv_car_bottom"
            app:layout_constraintLeft_toLeftOf="@+id/iv_car_bottom"
            app:layout_constraintRight_toRightOf="@+id/iv_car_bottom"
            app:layout_constraintTop_toTopOf="@+id/iv_car_bottom" />

        <ImageView
            android:id="@+id/iv_car"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/new_car_4" />

        <ImageView
            android:id="@+id/iv_car_light"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/new_car_3_light"
            app:layout_constraintBottom_toBottomOf="@+id/iv_car"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_car" />


        <ImageView
            android:id="@+id/iv_car_shadow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/new_car_2_shadow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.25"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/rainfall_project2"
            app:lottie_speed="0.6" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_insight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="20dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:constraintSet="@layout/item_home_insight_weather"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_car_code"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="23dp"
            android:layout_marginRight="30dp"
            android:ellipsize="end"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="-10sp"
            android:maxLines="1"
            android:textColor="@{activity.getColor(weatherCode.textColor)}"
            android:textSize="40sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vp_insight"
            tools:text="GV80" />


        <ImageView
            android:id="@+id/btn_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_carinfo"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:onClick="@{(view)->fragment.onSingleClickListener.onClick(view)}"
            app:layout_constraintTop_toTopOf="@+id/tv_car_code"
            app:layout_constraintBottom_toBottomOf="@+id/tv_car_code"
            app:layout_constraintLeft_toRightOf="@+id/tv_car_code"/>


        <TextView
            android:id="@+id/tv_car_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:ellipsize="end"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="8sp"
            android:maxLines="1"
            android:textColor="@{activity.getColor(weatherCode.textColor)}"
            android:textSize="22sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@+id/tv_car_code"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_car_code"
            tools:text="가솔린 2.5 터보 2WD" />

        <TextView
            android:id="@+id/tv_repair_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_ccba544d_round_13"
            android:drawableLeft="@drawable/round_99ffffff"
            android:drawablePadding="5dp"
            android:fontFamily="@font/regular_genesissansheadglobal"
            android:lineSpacingExtra="20sp"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingRight="10dp"
            android:paddingBottom="6dp"
            android:textColor="@color/x_99ffffff"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@+id/tv_car_vrn"
            app:layout_constraintTop_toBottomOf="@+id/tv_car_vrn"
            tools:text="긴급 출동 신청 중"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/tv_car_vrn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:ellipsize="end"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="12sp"
            android:maxLines="1"
            android:textColor="@{activity.getColor(weatherCode.textColor)}"
            android:textSize="18sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@+id/tv_car_model"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_car_model"
            tools:text="129차 2916" />


        <LinearLayout
            android:id="@+id/l_floating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="100dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_car"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:visibility="gone">

            <TextView
                android:id="@+id/btn_floating_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/regular_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:textColor="@color/x_bfffffff"
                tools:text="렌트/리스\n실 운행자 등록" />

            <ImageView
                android:id="@+id/iv_floating_mark_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_dotline"
                android:visibility="@{btnFloating2.getVisibility() == View.VISIBLE ? View.VISIBLE : View.GONE}" />

            <TextView
                android:id="@+id/btn_floating_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/regular_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:textColor="@color/x_bfffffff"
                tools:text="중고차 등록" />


            <ImageView
                android:id="@+id/iv_floating_mark_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_dotline"
                android:visibility="@{btnFloating3.getVisibility() == View.VISIBLE ? View.VISIBLE : View.GONE}" />

            <TextView
                android:id="@+id/btn_floating_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/regular_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:textColor="@color/x_bfffffff"
                tools:text="견적 내기" />
        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/l_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="100dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:visibility="gone">

            <TextView
                android:id="@+id/tv_distance_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/regular_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:maxLines="1"
                android:text="--"
                android:textColor="@color/x_ffffff"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/tv_title_distance_total"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/tv_title_distance_total"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1000km" />

            <TextView
                android:id="@+id/tv_title_distance_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:text="@string/gm01_1"
                android:textColor="@color/x_bfffffff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintWidth_percent=".333" />


            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_distance_1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:barrierDirection="end"
                app:constraint_referenced_ids="tv_distance_total,tv_title_distance_total" />


            <ImageView
                android:id="@+id/iv_distance_mark_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_dotline"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title_distance_total"
                app:layout_constraintLeft_toRightOf="@+id/barrier_distance_1"
                app:layout_constraintTop_toTopOf="@+id/tv_distance_total" />


            <TextView
                android:id="@+id/tv_distance_recently"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/regular_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:maxLines="1"
                android:text="--"
                android:textColor="@color/x_ffffff"
                app:layout_constraintBottom_toTopOf="@+id/tv_title_distance_recently"
                app:layout_constraintLeft_toLeftOf="@+id/tv_title_distance_recently"
                app:layout_constraintRight_toRightOf="@+id/tv_title_distance_recently"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="135km" />

            <TextView
                android:id="@+id/tv_title_distance_recently"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:text="@string/gm01_2"
                android:textColor="@color/x_bfffffff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/barrier_distance_1"
                app:layout_constraintWidth_percent=".333" />


            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_distance_2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:barrierDirection="end"
                app:constraint_referenced_ids="tv_distance_recently,tv_title_distance_recently" />


            <ImageView
                android:id="@+id/iv_distance_mark_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_dotline"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title_distance_recently"
                app:layout_constraintLeft_toRightOf="@+id/barrier_distance_2"
                app:layout_constraintTop_toTopOf="@+id/tv_distance_recently" />


            <TextView
                android:id="@+id/tv_distance_possible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/regular_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:maxLines="1"
                android:text="--"
                android:textColor="@color/x_ffffff"
                app:layout_constraintBottom_toTopOf="@+id/tv_title_distance_possible"
                app:layout_constraintLeft_toLeftOf="@+id/tv_title_distance_possible"
                app:layout_constraintRight_toRightOf="@+id/tv_title_distance_possible"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="538km" />

            <TextView
                android:id="@+id/tv_title_distance_possible"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular_genesissansheadglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="3sp"
                android:text="@string/gm01_3"
                android:textColor="@color/x_bfffffff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/barrier_distance_2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent=".333" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_main_more"
            app:layout_constraintBottom_toBottomOf="@+id/iv_car"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <FrameLayout
            android:id="@+id/fl_dim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/x_99000000"
            android:clickable="true"
            android:onClick="@{(view)->fragment.onClickCommon(view)}"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/btn_quick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:onClick="@{(view)->fragment.onClickCommon(view)}"
            android:scaleType="centerInside"
            android:src="@drawable/ic_quick"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/tv_car_code"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_car_code" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/l_quick_menu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_quick"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_arrow"
                android:src="@drawable/bubble_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/x_ffffff"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/btn_quick_1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/ripple_bg_00000000"
                    android:fontFamily="@font/regular_genesissansheadglobal"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="17sp"
                    android:padding="10dp"
                    android:textColor="@color/x_000000"
                    android:textSize="13sp"
                    android:visibility="gone"
                    tools:text="Quick 1"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/btn_quick_2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/ripple_bg_00000000"
                    android:fontFamily="@font/regular_genesissansheadglobal"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="17sp"
                    android:padding="10dp"
                    android:textColor="@color/x_000000"
                    android:textSize="13sp"
                    android:visibility="gone"
                    tools:text="Quick 2"
                    tools:visibility="visible" />


                <TextView
                    android:id="@+id/btn_quick_3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/ripple_bg_00000000"
                    android:fontFamily="@font/regular_genesissansheadglobal"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="17sp"
                    android:padding="10dp"
                    android:textColor="@color/x_000000"
                    android:textSize="13sp"
                    android:visibility="gone"
                    tools:text="Quick 3"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/btn_quick_4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/ripple_bg_00000000"
                    android:fontFamily="@font/regular_genesissansheadglobal"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="17sp"
                    android:padding="10dp"
                    android:textColor="@color/x_000000"
                    android:textSize="13sp"
                    android:visibility="gone"
                    tools:text="Quick 4"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/btn_quick_5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/ripple_bg_00000000"
                    android:fontFamily="@font/regular_genesissansheadglobal"
                    android:gravity="center_vertical"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="17sp"
                    android:padding="10dp"
                    android:textColor="@color/x_000000"
                    android:textSize="13sp"
                    android:visibility="gone"
                    tools:text="Quick 5"
                    tools:visibility="visible" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/v_click_reject"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/x_00000000"
            android:clickable="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>