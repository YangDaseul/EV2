<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_whole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/ripple_bg_ffffff_underline_f4f4f4">

        <TextView
            android:id="@+id/tv_zip_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/x_000000"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/regular_genesissansheadglobal"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_distance"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0"
            tools:text="12345"/>
        <TextView
            android:id="@+id/tv_road_addr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/x_bf000000"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="@font/light_genesissansheadglobal"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toBottomOf="@+id/tv_zip_no"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0"
            tools:text="서울특별시 금천구 시흥대로 333 (가산동)"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>