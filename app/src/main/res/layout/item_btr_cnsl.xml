<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_whole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:background="@drawable/ripple_bg_ffffff_stroke_e5e5e5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/l_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:background="@drawable/ripple_bg_ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_cat_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/light_genesissansheadglobal"
                android:lineSpacingExtra="11dp"
                android:letterSpacing="-0.01"
                android:maxLines="1"
                android:textColor="@color/x_ffffff"
                android:textSize="11dp"
                android:background="@color/x_111111"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="문의/정비" />


            <TextView
                android:id="@+id/tv_reply"
                style="@style/ViewBackgroundTransStrokeToupe"
                android:text="@string/gm_bt05_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_cat_nm"/>

            <TextView
                android:id="@+id/tv_reply_call"
                style="@style/ViewBackgroundTransStrokeToupe"
                android:layout_marginEnd="10dp"
                android:text="@string/gm_bt05_3"
                android:textColor="@color/x_666666"
                app:layout_goneMarginEnd="0dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_reply"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_cat_nm"/>


            <TextView
                android:id="@+id/tv_consl_ttl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:lineSpacingExtra="6dp"
                android:maxLines="1"
                android:textColor="@color/x_000000"
                android:textSize="16dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cat_nm"
                tools:text="Title,TitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitlTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleTitleeTitleTitle" />


            <TextView
                android:id="@+id/tv_consl_dt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="7dp"
                android:maxLines="1"
                android:textColor="@color/x_262626"
                android:textSize="16dp"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_consl_ttl"
                tools:text="2020.09.01" />




            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_consl_ttl"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/btn_arrow_open" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/l_contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/bg_f8f8f8_stroke_upper_e5e5e5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_title">

            <TextView
                android:id="@+id/tv_contents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="9dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:textColor="@color/x_000000"
                android:textSize="14dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="공지사항 상세 내용 입니다. 공지사항 상세 내용 입니다. 공지사항 상세 내용 입니다. 공지사항 상세 내용 입니다. 공지사항 상세 내용 입니다. 공지사항 상세 내용 입니다. 공지사항 상세 내용 입니다. 공지사항 상세 내용 입니다."
                tools:visibility="visible" />


            <TextView
                android:id="@+id/tv_contents_reply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_f8f8f8_stroke_upper_e5e5e5"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="9dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:textColor="@color/x_4d4d4d"
                android:textSize="14dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_contents"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="안녕하세요. 고객님\n가까운 서비스 네트워크센터에 방문하여\n정비를 진행해 주세요. 감사합니다."
                tools:visibility="visible" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>