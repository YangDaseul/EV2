<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">

    <data>
        <variable
            name="activity"
            type="com.genesis.apps.ui.main.home.LeasingCarHistDetailActivity" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/x_ffffff"
        android:paddingBottom="20dp">

        <include
            android:id="@+id/l_title"
            layout="@layout/layout_titlebar_depth3_user_edittext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_cancel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <ImageView
                    android:id="@+id/iv_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:scaleType="centerInside"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:src="@drawable/ic_fail"/>


                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="70dp"
                    android:fontFamily="@font/light_genesissansheadglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/x_000000"
                    android:textSize="22dp"
                    android:gravity="center"
                    android:background="@drawable/bg_ffffff_underline_e2e2e2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_mark"
                    tools:text="렌트/리스 실 운행자\n등록 신청이 반려되었습니다."/>



                <TextView
                    android:id="@+id/tv_title_vin"
                    style="@style/LeasingCarTextViewTitle"
                    android:text="@string/gm_carlst_02_2"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_msg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_vin"
                    style="@style/LeasingCarTextView"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_vin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="1548967561"/>



                <TextView
                    android:id="@+id/tv_title_csmr_scn_cd"
                    style="@style/LeasingCarTextViewTitle"
                    android:text="@string/gm_carlst_02_20"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_vin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_csmr_scn_cd"
                    style="@style/LeasingCarTextView"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_csmr_scn_cd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="개인 렌트리스"/>


                <TextView
                    android:id="@+id/tv_title_rent_period"
                    style="@style/LeasingCarTextViewTitle"
                    android:text="@string/gm_carlst_02_3"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_csmr_scn_cd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_rent_period"
                    style="@style/LeasingCarTextView"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_rent_period"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="12개월"/>



                <TextView
                    android:id="@+id/tv_title_attach_file_name"
                    style="@style/LeasingCarTextViewTitle"
                    android:text="@string/gm_carlst_02_21"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_rent_period"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_attach_file_name"
                    style="@style/LeasingCarTextView"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_attach_file_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="00 계약서.jpg"/>

                <TextView
                    android:id="@+id/tv_title_bluehands_info"
                    style="@style/LeasingCarTextViewTitle"
                    android:text="@string/gm_carlst_02_22"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_attach_file_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_bluehands_info"
                    style="@style/LeasingCarTextView"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_bluehands_info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="대치북부점 현대자동차(주)\n서울특별시 강남구 선릉로 336 (대치동)\n02-558-8204"/>


                <View
                    android:id="@+id/v_line_2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/x_e2e2e2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_bluehands_info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <TextView
                    android:id="@+id/tv_title_addr"
                    style="@style/TextViewTitleAddr"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_line_2"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l_addr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_addr"
                    app:layout_constraintStart_toStartOf="@+id/tv_title_addr"
                    app:layout_constraintEnd_toEndOf="@+id/tv_title_addr"
                    tools:visibility="gone">

                    <TextView
                        android:id="@+id/tv_post_no"
                        style="@style/TextViewPostNo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>


                    <TextView
                        android:id="@+id/btn_post_no"
                        style="@style/ButtonPostNo"
                        android:onClick="@{(view)->activity.onSingleClickListener.onClick(view)}"/>


                    <TextView
                        android:id="@+id/tv_addr"
                        style="@style/TextViewAddr"/>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/l_addr_detail"
                        style="@style/LayoutAddrDetail"
                        app:hintEnabled="false"
                        app:errorEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_addr_detail"
                            style="@style/EditTextAddrDetail" />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_addr_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/x_f4f4f4"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/regular_genesissansheadglobal"
                    android:textSize="16dp"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6dp"
                    android:textColor="@color/x_525252"
                    app:layout_constraintStart_toStartOf="@+id/tv_title_addr"
                    app:layout_constraintEnd_toEndOf="@+id/tv_title_addr"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_addr"
                    tools:text="(54879)\n서울특별 시 강남구 ...\n1105호"/>


                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="tv_addr_info,l_addr"/>



                <TextView
                    android:id="@+id/tv_mark_1"
                    style="@style/ViewMarkGrey"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_info_1" />

                <TextView
                    android:id="@+id/tv_info_1"
                    style="@style/ViewMsgInputSub"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/gm_carlst_02_24"
                    app:layout_constraintTop_toBottomOf="@+id/barrier"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mark_1" />


                <TextView
                    android:id="@+id/tv_mark_2"
                    style="@style/ViewMarkGrey"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_info_2" />

                <TextView
                    android:id="@+id/tv_info_2"
                    style="@style/ViewMsgInputSub"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/gm_carlst_02_25"
                    app:layout_constraintTop_toBottomOf="@+id/tv_info_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mark_2" />


                <TextView
                    android:id="@+id/tv_mark_3"
                    style="@style/ViewMarkGrey"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_info_3" />

                <TextView
                    android:id="@+id/tv_info_3"
                    style="@style/ViewMsgInputSub"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/gm_carlst_02_26"
                    app:layout_constraintTop_toBottomOf="@+id/tv_info_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_mark_3" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="@string/gm_carlst_02_13"
            android:textColor="@color/x_141414"
            android:textSize="16dp"
            android:gravity="center"
            android:background="@drawable/ripple_bg_ffffff_stroke_6f6f6f"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:onClick="@{(view)->activity.onSingleClickListener.onClick(view)}"
            app:layout_constraintTop_toBottomOf="@+id/scroll"
            app:layout_constraintEnd_toStartOf="@+id/btn_modify"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/btn_modify"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:text="@string/gm_carlst_02_28"
            android:textColor="@color/x_ffffff"
            android:textSize="16dp"
            android:gravity="center"
            android:background="@drawable/ripple_bg_141414"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:onClick="@{(view)->activity.onSingleClickListener.onClick(view)}"
            app:layout_constraintTop_toTopOf="@+id/btn_cancel"
            app:layout_constraintStart_toEndOf="@+id/btn_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <TextView
            android:id="@+id/btn_apply"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/gm_carlst_02_14"
            android:textColor="@color/x_ffffff"
            android:textSize="16dp"
            android:gravity="center"
            android:background="@drawable/ripple_bg_141414"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:onClick="@{(view)->activity.onSingleClickListener.onClick(view)}"
            app:layout_constraintTop_toTopOf="@+id/btn_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>