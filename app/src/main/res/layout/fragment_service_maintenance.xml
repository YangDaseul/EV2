<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/x_f4f4f4"
        android:padding="20dp">

        <!-- TODO  : 스크롤 범위 확정되면 그에 맞게 조치-->

        <!-- 서비스 네트워크 찾기 -->
        <TextView
            android:id="@+id/tv_service_maintenance_find_network"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ripple_bg_000000_round_10"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/regular_genesissansheadglobal"
            android:gravity="center_vertical"
            android:letterSpacing="-0.16"
            android:paddingStart="20dp"
            android:text="@string/sm01_maintenance_1"
            android:textColor="@color/x_ffffff"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 네트워크 찾기 오른쪽에 " > " -->
        <!--  TODO fix src   -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:src="@color/x_ba544d"
            app:layout_constraintBottom_toBottomOf="@id/tv_service_maintenance_find_network"
            app:layout_constraintEnd_toEndOf="@id/tv_service_maintenance_find_network"
            app:layout_constraintTop_toTopOf="@id/tv_service_maintenance_find_network" />

        <!--TODO : 항목 별 desc 밑에 여백 좁다-->
        <!--  정비 예약 클릭영역-->
        <ImageView
            android:id="@+id/iv_service_maintenance_reservation"
            style="@style/ServiceMaintenanceItem"
            app:layout_constraintTop_toBottomOf="@id/tv_service_maintenance_find_network" />

        <!--  정비 예약 타이틀-->
        <TextView
            android:id="@+id/tv_service_maintenance_reservation_title"
            style="@style/ServiceMaintenanceTitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="@string/sm01_maintenance_2"
            app:layout_constraintStart_toStartOf="@id/iv_service_maintenance_reservation"
            app:layout_constraintTop_toTopOf="@id/iv_service_maintenance_reservation" />

        <!--  정비 예약 텍스트-->
        <TextView
            android:id="@+id/tv_service_maintenance_reservation_desc"
            style="@style/ServiceMaintenanceDesc"
            android:text="@string/sm01_maintenance_3"
            app:layout_constraintStart_toStartOf="@id/tv_service_maintenance_reservation_title"
            app:layout_constraintTop_toBottomOf="@id/tv_service_maintenance_reservation_title" />

        <!--  정비 예약 아이콘-->
        <!--   todo fix icon-->
        <ImageView
            style="@style/ServiceMaintenanceIcon"
            android:src="@drawable/ic_service_emergency"
            app:layout_constraintEnd_toEndOf="@id/iv_service_maintenance_reservation"
            app:layout_constraintTop_toTopOf="@id/tv_service_maintenance_reservation_desc" />


        <!--  정비 이력 클릭영역-->
        <ImageView
            android:id="@+id/iv_service_maintenance_history"
            style="@style/ServiceMaintenanceItem"
            app:layout_constraintTop_toBottomOf="@id/iv_service_maintenance_reservation" />

        <!--  정비 이력 타이틀-->
        <TextView
            android:id="@+id/tv_service_maintenance_history_title"
            style="@style/ServiceMaintenanceTitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="@string/sm01_maintenance_4"
            app:layout_constraintStart_toStartOf="@id/iv_service_maintenance_history"
            app:layout_constraintTop_toTopOf="@id/iv_service_maintenance_history" />

        <!--  정비 이력 텍스트-->
        <TextView
            android:id="@+id/tv_service_maintenance_history_desc"
            style="@style/ServiceMaintenanceDesc"
            android:text="@string/sm01_maintenance_5"
            app:layout_constraintStart_toStartOf="@id/tv_service_maintenance_history_title"
            app:layout_constraintTop_toBottomOf="@id/tv_service_maintenance_history_title" />

        <!--  정비 이력 아이콘-->
        <!--   todo fix icon-->
        <ImageView
            style="@style/ServiceMaintenanceIcon"
            android:src="@drawable/ic_service_emergency"
            app:layout_constraintEnd_toEndOf="@id/iv_service_maintenance_history"
            app:layout_constraintTop_toTopOf="@id/tv_service_maintenance_history_desc" />


        <!--  정비 긴급출동 클릭영역-->
        <ImageView
            android:id="@+id/iv_service_maintenance_emergency"
            style="@style/ServiceMaintenanceItem"
            app:layout_constraintTop_toBottomOf="@id/iv_service_maintenance_history" />

        <!--  정비 긴급출동 타이틀-->
        <TextView
            android:id="@+id/tv_service_maintenance_emergency_title"
            style="@style/ServiceMaintenanceTitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="@string/sm01_maintenance_6"
            app:layout_constraintStart_toStartOf="@id/iv_service_maintenance_emergency"
            app:layout_constraintTop_toTopOf="@id/iv_service_maintenance_emergency" />

        <!--  정비 긴급출동 텍스트-->
        <TextView
            android:id="@+id/tv_service_maintenance_emergency_desc"
            style="@style/ServiceMaintenanceDesc"
            android:text="@string/sm01_maintenance_8"
            app:layout_constraintStart_toStartOf="@id/tv_service_maintenance_emergency_title"
            app:layout_constraintTop_toBottomOf="@id/tv_service_maintenance_emergency_title" />

        <!-- 긴급출동 출동중 -->
        <TextView
            android:id="@+id/tv_moving_now"
            android:layout_width="56dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:background="@color/x_ba544d"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="4sp"
            android:text="@string/sm01_maintenance_7"
            android:textColor="@color/x_ffffff"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@id/tv_service_maintenance_emergency_title"
            app:layout_constraintTop_toTopOf="@id/tv_service_maintenance_emergency_title"
            tools:visibility="visible" />

        <!--  정비 긴급출동 아이콘-->
        <ImageView
            style="@style/ServiceMaintenanceIcon"
            android:src="@drawable/ic_service_emergency"
            app:layout_constraintEnd_toEndOf="@id/iv_service_maintenance_emergency"
            app:layout_constraintTop_toTopOf="@id/tv_service_maintenance_emergency_desc" />


        <!--  정비 원격진단 클릭영역-->
        <ImageView
            android:id="@+id/iv_service_maintenance_customercenter"
            style="@style/ServiceMaintenanceItem"
            app:layout_constraintTop_toBottomOf="@id/iv_service_maintenance_emergency" />

        <!--  정비 원격진단 타이틀-->
        <TextView
            android:id="@+id/tv_service_maintenance_customercenter_title"
            style="@style/ServiceMaintenanceTitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="@string/sm01_maintenance_9"
            app:layout_constraintStart_toStartOf="@id/iv_service_maintenance_customercenter"
            app:layout_constraintTop_toTopOf="@id/iv_service_maintenance_customercenter" />

        <!--  정비 원격진단 텍스트-->
        <TextView
            android:id="@+id/tv_service_maintenance_customercenter_desc"
            style="@style/ServiceMaintenanceDesc"
            android:text="@string/sm01_maintenance_10"
            app:layout_constraintStart_toStartOf="@id/tv_service_maintenance_customercenter_title"
            app:layout_constraintTop_toBottomOf="@id/tv_service_maintenance_customercenter_title" />

        <!--  정비 원격진단 아이콘-->
        <ImageView
            style="@style/ServiceMaintenanceIcon"
            android:src="@drawable/ic_service_customercenter"
            app:layout_constraintEnd_toEndOf="@id/iv_service_maintenance_customercenter"
            app:layout_constraintTop_toTopOf="@id/tv_service_maintenance_customercenter_desc" />


        <!--  정비 재발 클릭영역-->
        <ImageView
            android:id="@+id/iv_service_maintenance_defect"
            style="@style/ServiceMaintenanceItem"
            app:layout_constraintTop_toBottomOf="@id/iv_service_maintenance_customercenter" />

        <!--  정비 재발 타이틀-->
        <TextView
            android:id="@+id/tv_service_maintenance_defect_title"
            style="@style/ServiceMaintenanceTitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="@string/sm01_maintenance_11"
            app:layout_constraintStart_toStartOf="@id/iv_service_maintenance_defect"
            app:layout_constraintTop_toTopOf="@id/iv_service_maintenance_defect" />

        <!--  정비 재발 텍스트-->
        <TextView
            android:id="@+id/tv_service_maintenance_defect_desc"
            style="@style/ServiceMaintenanceDesc"
            android:text="@string/sm01_maintenance_12"
            app:layout_constraintStart_toStartOf="@id/tv_service_maintenance_defect_title"
            app:layout_constraintTop_toBottomOf="@id/tv_service_maintenance_defect_title" />

        <!--  정비 재발 아이콘-->
        <!--   todo fix icon-->
        <ImageView
            style="@style/ServiceMaintenanceIcon"
            android:src="@drawable/ic_service_defect"
            app:layout_constraintEnd_toEndOf="@id/iv_service_maintenance_defect"
            app:layout_constraintTop_toTopOf="@id/tv_service_maintenance_defect_desc" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>