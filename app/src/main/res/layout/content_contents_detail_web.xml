<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="activity" type="com.genesis.apps.ui.main.contents.ContentsDetailWebActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:id="@+id/fm_holder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ll_link"
            app:layout_constraintVertical_weight="1" />

        <LinearLayout
            android:id="@+id/ll_link"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fm_holder"
            app:layout_constraintBottom_toTopOf="@id/ll_rate">

            <TextView
                android:id="@+id/btn_link"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/ripple_bg_000000"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:gravity="center"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="0dp"
                android:textColor="@color/x_ffffff"
                android:textSize="16dp"
                tools:text="@string/cm02_11"
                android:onClick="@{(v) -> activity.onSingleClickListener.onClick(v)}"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_rate"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_link"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/ll_rate_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:onClick="@{(v) -> activity.onClickCommon(v)}">

                    <ImageView
                        android:id="@+id/iv_rate_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_star_l_n_c" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rate_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:onClick="@{(v) -> activity.onClickCommon(v)}">

                    <ImageView
                        android:id="@+id/iv_rate_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_star_l_n_c" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rate_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:onClick="@{(v) -> activity.onClickCommon(v)}">

                    <ImageView
                        android:id="@+id/iv_rate_3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_star_l_n_c" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rate_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:onClick="@{(v) -> activity.onClickCommon(v)}">

                    <ImageView
                        android:id="@+id/iv_rate_4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_star_l_n_c"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rate_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:onClick="@{(v) -> activity.onClickCommon(v)}">

                    <ImageView
                        android:id="@+id/iv_rate_5"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_star_l_n_c"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/x_262626" />

                    <TextView
                        android:id="@+id/tv_rate_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:fontFamily="@font/regular_genesissanstextglobal"
                        android:textSize="14dp"
                        android:textColor="@color/x_262626"
                        tools:text="@string/cm02_10" />

                </LinearLayout>

                <include
                    android:id="@+id/btn_rate"
                    layout="@layout/item_btn_underline_mark_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:onClick="@{(v) -> activity.onSingleClickListener.onClick(v)}"
                    app:btnNm="@{@string/cm02_11}" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>