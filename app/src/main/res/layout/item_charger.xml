<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="57dp">

        <!--상단 라인-->
        <View
            android:id="@+id/line0"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/x_e5e5e5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--충전기 ID  충전 속도-->
        <TextView
            android:id="@+id/tv_charger_id_type"
            android:layout_width="81dp"
            android:layout_height="0dp"
            android:background="@color/x_f8f8f8"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:gravity="center_vertical"
            android:paddingStart="11dp"
            android:textColor="@color/x_000000"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@id/line1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line0"
            tools:text="01. 초고속" />

        <!--충전기 사용 가능 여부 가격-->
        <TextView
            android:id="@+id/tv_charger_status_pay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:gravity="center_vertical"
            android:textColor="@color/x_996449"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@id/line1"
            app:layout_constraintEnd_toStartOf="@id/tv_btn_reserve"
            app:layout_constraintStart_toEndOf="@id/tv_charger_id_type"
            app:layout_constraintTop_toBottomOf="@id/line0"
            tools:text="사용가능 | 999원/kw" />

        <!--예약버튼-->
        <TextView
            android:id="@+id/tv_btn_reserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ripple_bg_trans_underline_000000"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:gravity="bottom"
            android:paddingTop="19dp"
            android:text="@string/sm_evss04_10"
            android:textColor="@color/x_000000"
            android:textSize="14dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line0"
            tools:visibility="visible" />

        <!--하단 라인-->
        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/x_e5e5e5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>