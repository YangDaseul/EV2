<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <!-- todo : 객체 자료형 -->
        <variable
            name="holder"
            type="com.genesis.apps.ui.main.service.ServiceDriveHistoryAdapter.ServiceDriveHistoryFinishedViewHolder" />

    </data>

    <!-- 클릭 영역 :
         TODO 항목 상태가 접수중이면 클릭 가능하게 하고 배경 리소스도 클릭 이펙트 있는 걸로 바꿔야 함-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_relapse_history_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_ffffff_stroke_e2e2e2"
        android:padding="15dp">

        <!-- "접수중 or 신청 완료"
        layout_relapse_header_finished
        layout_relapse_header_waiting -->
        <ViewStub
            android:id="@+id/vs_relapse_title"
            style="@style/TextBasic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_141414_round_99"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:gravity="center"
            android:text="@string/item_relapse_history_finished"
            android:textColor="@color/x_ffffff"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 오른쪽 화살표 -->
        <ImageView
            android:id="@+id/iv_relapse_history_open_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_arrow_open_r"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- "차대번호" -->
        <TextView
            android:id="@+id/tv_relapse_history_vin_title"
            style="@style/RelapseHistoryItemTitle"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="8dp"
            android:text="@string/item_relapse_history_vin"
            app:layout_constraintBottom_toTopOf="@id/tv_relapse_history_date_title"
            app:layout_constraintStart_toEndOf="@+id/vs_relapse_title"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 차대번호 데이터 todo : 객체 만들고 나서 바인딩 변수명 제대로 -->
        <TextView
            android:id="@+id/tv_relapse_history_vin_desc"
            style="@style/RelapseHistoryItemDesc"
            android:layout_marginStart="13dp"
            android:text="@{holder.date}"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_relapse_history_vin_title"
            app:layout_constraintEnd_toStartOf="@id/iv_relapse_history_open_ic"
            app:layout_constraintStart_toEndOf="@id/tv_relapse_history_vin_title"
            tools:text="12490ENG32EWNE492" />

        <!-- "접수일" -->
        <TextView
            android:id="@+id/tv_relapse_history_date_title"
            style="@style/RelapseHistoryItemTitle"
            android:layout_marginBottom="8dp"
            android:text="@string/item_relapse_history_date"
            app:layout_constraintStart_toStartOf="@id/tv_relapse_history_vin_title"
            app:layout_constraintTop_toBottomOf="@id/tv_relapse_history_vin_title"
            app:layout_constraintVertical_chainStyle="packed" />

        <!-- 접수일 데이터 -->
        <TextView
            android:id="@+id/tv_relapse_history_date_desc"
            style="@style/RelapseHistoryItemDesc"
            android:text="@{holder.date}"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_relapse_history_date_title"
            app:layout_constraintEnd_toStartOf="@id/iv_relapse_history_open_ic"
            app:layout_constraintStart_toStartOf="@id/tv_relapse_history_vin_desc"
            tools:text="2020.12.32" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>