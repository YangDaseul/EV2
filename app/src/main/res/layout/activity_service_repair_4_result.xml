<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">

    <data>

        <import type="com.genesis.apps.comm.util.DateUtil" />

        <import type="com.genesis.apps.comm.util.StringUtil" />

        <import type="android.telephony.PhoneNumberUtils" />

        <import type="java.util.Locale" />

        <import type="android.text.TextUtils" />

        <import type="android.view.View" />

        <variable
            name="activity"
            type="com.genesis.apps.ui.main.service.ServiceRepair4ResultActivity" />

        <variable
            name="data"
            type="com.genesis.apps.comm.model.vo.RepairReserveVO" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/x_ffffff"
        android:paddingBottom="20dp">

        <include
            android:id="@+id/l_title"
            layout="@layout/layout_titlebar_depth3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_confirm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_succeed"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/light_genesissansheadglobal"
                    android:gravity="center"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="7sp"
                    android:text="@string/sm_r_rsv04_04_1"
                    android:textColor="@color/x_000000"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_mark" />


                <TextView
                    android:id="@+id/tv_msg_sub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:gravity="center"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="12sp"
                    android:text="@string/sm_r_rsv04_04_2"
                    android:textColor="@color/x_262626"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_msg" />


                <TextView
                    android:id="@+id/tv_title_rsvt_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/light_genesissansheadglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="12sp"
                    android:text="@string/sm_r_rsv04_04_13"
                    android:textColor="@color/x_000000"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_msg_sub" />

                <TextView
                    android:id="@+id/tv_rsvt_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="12sp"
                    android:text="@{data.rsvtNo ?? ``}"
                    android:textColor="@color/x_996449"
                    android:textSize="18sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_title_rsvt_no"
                    app:layout_constraintStart_toEndOf="@+id/tv_title_rsvt_no"
                    tools:text="A1232313213131" />


                <TextView
                    android:id="@+id/tv_title_reserve"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/light_genesissansheadglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="12sp"
                    android:text="@string/sm_r_rsv04_04_14"
                    android:textColor="@color/x_000000"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_rsvt_no" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l_reserve_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/x_e5e5e5"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_reserve">

                    <include
                        android:id="@+id/l_asn_nm"
                        layout="@layout/item_rpar_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:isLeft="@{true}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:msg="@{data.asnNm}"
                        app:title="@{@string/sm_r_rsv04_04_4}" />

                    <include
                        android:id="@+id/l_pbz_adr"
                        layout="@layout/item_rpar_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        app:isLeft="@{true}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/l_asn_nm"
                        app:msg="@{data.pbzAdr}"
                        app:title="@{@string/sm_r_rsv04_04_5}" />

                    <include
                        android:id="@+id/l_rsvt_hope_dt"
                        layout="@layout/item_rpar_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        app:isLeft="@{true}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/l_pbz_adr"
                        app:msg="@{DateUtil.getDate(DateUtil.getDefaultDateFormat((data.rsvtHopeDt ?? ``), DateUtil.DATE_FORMAT_yyyyMMdd), DateUtil.DATE_FORMAT_yyyy_MM_dd_E) +` / ` + (DateUtil.getDate(DateUtil.getDefaultDateFormat((data.rsvtHopeTm ?? ``), DateUtil.DATE_FORMAT_HHmm), DateUtil.DATE_FORMAT_HH_mm))}"
                        app:title="@{@string/sm_r_rsv04_04_6}" />


                    <include
                        android:id="@+id/l_reptn"
                        layout="@layout/item_rpar_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        app:isLeft="@{true}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/l_rsvt_hope_dt"
                        app:msg="@{PhoneNumberUtils.formatNumber( (data.repTn ?? ``), Locale.getDefault().getCountry())}"
                        app:title="@{@string/sm_r_rsv03_04_8}" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/tv_title_reserver"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/light_genesissansheadglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="12sp"
                    android:text="@string/sm_r_rsv03_7"
                    android:textColor="@color/x_000000"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/l_reserve_info" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l_user_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/x_e5e5e5"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_reserver">

                    <include
                        android:id="@+id/l_user_nm"
                        layout="@layout/item_rpar_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:isLeft="@{true}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:msg="@{data.userNm}"
                        app:title="@{@string/sm_r_rsv03_8}" />

                    <include
                        android:id="@+id/l_tel"
                        layout="@layout/item_rpar_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        app:isLeft="@{true}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/l_user_nm"
                        app:msg="@{PhoneNumberUtils.formatNumber( (data.hpNo ?? ``), Locale.getDefault().getCountry())}"
                        app:title="@{@string/sm_r_rsv03_9}" />

                    <include
                        android:id="@+id/l_vrn"
                        layout="@layout/item_rpar_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        app:isLeft="@{true}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/l_tel"
                        app:msg="@{data.carRgstNo}"
                        app:title="@{@string/sm_r_rsv03_10}" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ripple_bg_141414"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:gravity="center"
            android:onClick="@{(view)->activity.onSingleClickListener.onClick(view)}"
            android:text="@string/sm_emgc02_9"
            android:textColor="@color/x_ffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>