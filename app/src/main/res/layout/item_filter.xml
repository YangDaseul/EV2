<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="subFragment"
            type="com.genesis.apps.ui.common.fragment.SubFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/selector_bg_ffffff_757575_996449"
            android:drawablePadding="5dp"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:gravity="center"
            android:onClick="@{(view) -> subFragment.onSingleClickListener.onSingleClick(view)}"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@drawable/selector_txt_757575_ffffff"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="제네시스 충전소" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>