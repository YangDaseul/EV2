<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="android.text.TextUtils"/>
        <import type="com.genesis.apps.comm.model.constants.VariableType"/>
        <variable
            name="custGbCd"
            type="String"/>
        <variable
            name="isAlarm"
            type="Boolean"/>
        <variable
            name="isSearch"
            type="Boolean"/>
        <variable
            name="isStore"
            type="Boolean"/>
        <variable
            name="isBgWhite"
            type="Boolean"/>
        <variable
            name="useBarcode"
            type="Boolean"/>
        <variable
            name="point"
            type="String"/>
        <variable
            name="menu"
            type="String"/>
        <variable
            name="activity"
            type="com.genesis.apps.ui.main.MainActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_whole"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@{isBgWhite ? menu.equals(@string/main_word_2) ? @drawable/bg_f8f8f8 : @drawable/bg_ffffff : @drawable/bg_000000_underline_262626}"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="24dp">

        <ImageView
            android:id="@+id/btn_store_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{(view)->activity.onSingleClickListener.onClick(view)}"
            android:scaleType="fitCenter"
            android:src="@drawable/ico_gnb_search_main"
            android:visibility="@{TextUtils.isEmpty(custGbCd)||custGbCd.equalsIgnoreCase(VariableType.MAIN_VEHICLE_TYPE_0000) ? View.GONE : isStore ? View.VISIBLE : View.GONE}"
            app:layout_constraintRight_toLeftOf="@+id/btn_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="gone"/>

        <ImageView
            android:id="@+id/btn_store_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:onClick="@{(view)->activity.onSingleClickListener.onClick(view)}"
            android:scaleType="fitCenter"
            android:src="@drawable/ico_gnb_store_main"
            android:visibility="@{TextUtils.isEmpty(custGbCd)||custGbCd.equalsIgnoreCase(VariableType.MAIN_VEHICLE_TYPE_0000) ? View.GONE : isStore ? View.VISIBLE : View.GONE}"
            app:layout_constraintRight_toLeftOf="@+id/btn_store_search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="gone"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:visibility="@{TextUtils.isEmpty(custGbCd)||custGbCd.equalsIgnoreCase(VariableType.MAIN_VEHICLE_TYPE_0000) ? View.GONE : isStore ? View.VISIBLE : View.GONE}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="10dp"
                android:textColor="@color/x_000000"
                android:textSize="14dp"
                android:text="@string/word_home_3"/>

            <TextView
                android:id="@+id/tv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/light_genesissansheadglobal"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="7dp"
                android:textColor="@color/x_996449"
                android:textSize="25dp"
                android:text="@{point}"
                tools:text="32,450P"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{TextUtils.isEmpty(custGbCd)||custGbCd.equalsIgnoreCase(VariableType.MAIN_VEHICLE_TYPE_0000) ? View.VISIBLE : isStore ? View.GONE : View.VISIBLE}"
            android:textColor="@color/x_000000"
            android:textSize="22dp"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="10dp"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:text="@{menu}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/btn_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="@{(view)->activity.onSingleClickListener.onClick(view)}"
            android:scaleType="fitCenter"
            android:src="@{isBgWhite ? @drawable/ic_alarm_b : @drawable/ic_alarm}"
            android:visibility="@{TextUtils.isEmpty(custGbCd)||custGbCd.equalsIgnoreCase(VariableType.MAIN_VEHICLE_TYPE_0000) ? View.GONE : isStore ? View.GONE : View.VISIBLE}"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/ic_alarm_b"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_badge"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:background="@drawable/badge_ce2d2d"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:visibility="@{isStore ? View.GONE : isAlarm ? View.VISIBLE : View.GONE}"
            app:layout_constraintRight_toRightOf="@+id/btn_alarm"
            app:layout_constraintTop_toTopOf="@+id/btn_alarm"
            tools:visibility="visible"/>


        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:onClick="@{(view)->activity.onSingleClickListener.onClick(view)}"
            android:scaleType="fitCenter"
            android:src="@{isBgWhite ? @drawable/ic_profile_b : @drawable/ic_profile}"
            android:visibility="@{TextUtils.isEmpty(custGbCd)||custGbCd.equalsIgnoreCase(VariableType.MAIN_VEHICLE_TYPE_0000) ? View.GONE : isStore ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_alarm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginRight="0dp" />


        <TextView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:background="@{isBgWhite ? @drawable/bg_ffffff_underline_000000 : @drawable/bg_00000000_underline_ffffff}"
            android:onClick="@{(view)->activity.onSingleClickListener.onClick(view)}"
            android:visibility="@{TextUtils.isEmpty(custGbCd)||custGbCd.equalsIgnoreCase(VariableType.MAIN_VEHICLE_TYPE_0000) ? View.VISIBLE : View.GONE}"
            android:text="@string/gm02_8"
            android:textColor="@{isBgWhite ? @color/x_000000 : @color/x_ffffff}"
            android:textSize="15dp"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="29dp"
            android:fontFamily="@font/regular_genesissansheadglobal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/btn_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:onClick="@{(view)->activity.onSingleClickListener.onClick(view)}"
            android:scaleType="centerInside"
            android:src="@{isBgWhite ? @drawable/ic_barcode_b : @drawable/ic_barcode}"
            android:visibility="@{ (useBarcode&amp;&amp;!isStore) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_store_cart"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>