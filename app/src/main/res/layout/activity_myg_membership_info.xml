<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.genesis.apps.ui.myg.MyGMembershipInfoActivity" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/x_ffffff">

        <include
            android:id="@+id/l_title"
            layout="@layout/layout_titlebar_depth3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="30dp">


                <TextView
                    android:id="@+id/tv_membership_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/regular_genesissansheadglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="-4sp"
                    android:text="@string/word_membership_1"
                    android:textColor="@color/x_000000"
                    android:textSize="20sp"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_number_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6sp"
                    android:text="1."
                    android:textColor="@color/x_aaabaf"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_membership_info"
                    app:layout_constraintTop_toBottomOf="@+id/tv_membership_info" />


                <TextView
                    android:id="@+id/tv_contents_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/msg_membership_1"
                    android:textColor="@color/x_000000"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_membership_info"
                    app:layout_constraintStart_toEndOf="@id/tv_number_1"
                    app:layout_constraintTop_toTopOf="@+id/tv_number_1" />


                <View
                    android:id="@+id/v_line_1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/x_f4f4f4"
                    app:layout_constraintEnd_toEndOf="@+id/tv_membership_info"
                    app:layout_constraintStart_toStartOf="@+id/tv_contents_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contents_1" />


                <TextView
                    android:id="@+id/tv_number_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6sp"
                    android:text="2."
                    android:textColor="@color/x_aaabaf"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_membership_info"
                    app:layout_constraintTop_toBottomOf="@+id/v_line_1" />


                <TextView
                    android:id="@+id/tv_contents_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/msg_membership_2"
                    android:textColor="@color/x_000000"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_membership_info"
                    app:layout_constraintStart_toEndOf="@id/tv_number_2"
                    app:layout_constraintTop_toTopOf="@+id/tv_number_2" />


                <View
                    android:id="@+id/v_line_2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/x_f4f4f4"
                    app:layout_constraintEnd_toEndOf="@+id/tv_membership_info"
                    app:layout_constraintStart_toStartOf="@+id/tv_contents_2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contents_2" />


                <TextView
                    android:id="@+id/tv_number_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6sp"
                    android:text="3."
                    android:textColor="@color/x_aaabaf"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_membership_info"
                    app:layout_constraintTop_toBottomOf="@+id/v_line_2" />


                <TextView
                    android:id="@+id/tv_contents_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/msg_membership_3"
                    android:textColor="@color/x_000000"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_membership_info"
                    app:layout_constraintStart_toEndOf="@id/tv_number_3"
                    app:layout_constraintTop_toTopOf="@+id/tv_number_3" />


                <View
                    android:id="@+id/v_line_3"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/x_f4f4f4"
                    app:layout_constraintEnd_toEndOf="@+id/tv_membership_info"
                    app:layout_constraintStart_toStartOf="@+id/tv_contents_3"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contents_3" />


                <TextView
                    android:id="@+id/tv_number_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6sp"
                    android:text="4."
                    android:textColor="@color/x_aaabaf"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_membership_info"
                    app:layout_constraintTop_toBottomOf="@+id/v_line_3" />


                <TextView
                    android:id="@+id/tv_contents_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/msg_membership_4"
                    android:textColor="@color/x_000000"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_membership_info"
                    app:layout_constraintStart_toEndOf="@id/tv_number_4"
                    app:layout_constraintTop_toTopOf="@+id/tv_number_4" />


                <View
                    android:id="@+id/v_line_4"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/x_f4f4f4"
                    app:layout_constraintEnd_toEndOf="@+id/tv_membership_info"
                    app:layout_constraintStart_toStartOf="@+id/tv_contents_4"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contents_4" />


                <TextView
                    android:id="@+id/tv_number_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6sp"
                    android:text="5."
                    android:textColor="@color/x_aaabaf"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_membership_info"
                    app:layout_constraintTop_toBottomOf="@+id/v_line_4" />


                <TextView
                    android:id="@+id/tv_contents_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/word_membership_2"
                    android:textColor="@color/x_000000"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_membership_info"
                    app:layout_constraintStart_toEndOf="@id/tv_number_5"
                    app:layout_constraintTop_toTopOf="@+id/tv_number_5" />


                <RelativeLayout
                    android:id="@+id/l_contents_5_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/x_f4f4f4"
                    android:padding="14dp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_membership_info"
                    app:layout_constraintStart_toStartOf="@+id/tv_contents_5"
                    app:layout_constraintTop_toBottomOf="@+id/tv_contents_5">

                    <TextView
                        android:id="@+id/tv_contents_5_1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular_genesissanstextglobal"
                        android:text="@string/msg_membership_5"
                        android:textColor="@color/x_525252"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/tv_contents_5_1_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_contents_5_1_1"
                        android:fontFamily="@font/regular_genesissanstextglobal"
                        android:text="@string/msg_membership_6"
                        android:textColor="@color/x_141414"
                        android:textSize="14sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/l_contents_5_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@color/x_f4f4f4"
                    android:padding="14dp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_membership_info"
                    app:layout_constraintStart_toStartOf="@+id/tv_contents_5"
                    app:layout_constraintTop_toBottomOf="@+id/l_contents_5_1">

                    <TextView
                        android:id="@+id/tv_contents_5_2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular_genesissanstextglobal"
                        android:text="@string/msg_membership_7"
                        android:textColor="@color/x_525252"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/tv_contents_5_2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_contents_5_2_1"
                        android:fontFamily="@font/regular_genesissanstextglobal"
                        android:text="@string/msg_membership_8"
                        android:textColor="@color/x_141414"
                        android:textSize="14sp" />

                </RelativeLayout>


                <ImageView
                    android:id="@+id/iv_dot_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/rect_aaabaf_2dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_warning_1"
                    app:layout_constraintEnd_toStartOf="@+id/tv_warning_1"
                    app:layout_constraintStart_toStartOf="@+id/l_contents_5_2"
                    app:layout_constraintTop_toTopOf="@+id/tv_warning_1"
                    app:layout_constraintVertical_bias=".2" />

                <TextView
                    android:id="@+id/tv_warning_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/msg_membership_9"
                    android:textColor="@color/x_aaabaf"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_membership_info"
                    app:layout_constraintStart_toEndOf="@+id/iv_dot_1"
                    app:layout_constraintTop_toBottomOf="@+id/l_contents_5_2" />


                <ImageView
                    android:id="@+id/iv_dot_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/rect_aaabaf_2dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_warning_2"
                    app:layout_constraintEnd_toStartOf="@+id/tv_warning_2"
                    app:layout_constraintStart_toStartOf="@+id/l_contents_5_2"
                    app:layout_constraintTop_toTopOf="@+id/tv_warning_2"
                    app:layout_constraintVertical_bias=".5" />

                <TextView
                    android:id="@+id/tv_warning_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6sp"
                    android:text="@string/msg_membership_10"
                    android:textColor="@color/x_aaabaf"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_membership_info"
                    app:layout_constraintStart_toEndOf="@+id/iv_dot_2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_warning_1" />


                <View
                    android:id="@+id/v_line_5"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/x_f4f4f4"
                    app:layout_constraintEnd_toEndOf="@+id/tv_membership_info"
                    app:layout_constraintStart_toStartOf="@+id/tv_contents_5"
                    app:layout_constraintTop_toBottomOf="@+id/tv_warning_2" />


                <TextView
                    android:id="@+id/btn_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ripple_bg_000000"
                    android:fontFamily="@font/regular_genesissanstextglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="6sp"
                    android:onClick="@{(view)->activity.onSingleClickListener.onClick(view)}"
                    android:paddingLeft="10dp"
                    android:paddingTop="6dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="6dp"
                    android:tag="@string/word_membership_4"
                    android:text="@string/word_membership_3"
                    android:textColor="@color/x_ffffff"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_membership_info"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintTop_toBottomOf="@+id/v_line_5" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>