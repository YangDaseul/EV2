<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.genesis.apps.comm.util.DateUtil" />

        <import type="com.genesis.apps.comm.util.StringUtil" />

        <import type="android.text.TextUtils" />

        <import type="android.view.View" />

        <import type="android.telephony.PhoneNumberUtils" />

        <import type="java.util.Locale" />

        <variable
            name="data"
            type="com.genesis.apps.comm.model.vo.RepairHistVO" />

        <variable
            name="pos"
            type="int" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_whole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/tv_wrhs_dtm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/regular_genesissansheadglobal"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="10sp"
            android:text="@{DateUtil.getDate(DateUtil.getDefaultDateFormat((data.wrhsDtm ?? ``), DateUtil.DATE_FORMAT_yyyyMMdd), DateUtil.DATE_FORMAT_yyyy_mm_dd_dot)}"
            android:textColor="@color/x_000000"
            android:textSize="14sp"
            android:visibility="@{pos==0 ? View.VISIBLE : View.GONE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2020.07.25" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/l_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_ffffff_stroke_e2e2e2"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_wrhs_dtm">

            <TextView
                android:id="@+id/tv_title_asn_nm"
                style="@style/LeasingCarTextViewTitle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/sm_r_history01_1"
                android:textColor="@color/x_525252"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_asn_nm"
                style="@style/LeasingCarTextView"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text="@{data.asnNm ?? `--`}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_asn_nm"
                tools:text="금천 제네시스 센터" />


            <TextView
                android:id="@+id/tv_title_rpar_work_nm"
                style="@style/LeasingCarTextViewTitle"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/sm_r_history01_2"
                android:textColor="@color/x_525252"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_asn_nm" />

            <TextView
                android:id="@+id/tv_rpar_work_nm"
                style="@style/LeasingCarTextView"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text="@{data.rparWorkNm ?? `--`}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_rpar_work_nm"
                tools:text="엔진오일 / 필터 / 에어크리너 교환" />


            <TextView
                android:id="@+id/tv_title_milg"
                style="@style/LeasingCarTextViewTitle"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/sm_r_history01_3"
                android:textColor="@color/x_525252"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_rpar_work_nm" />

            <TextView
                android:id="@+id/tv_milg"
                style="@style/LeasingCarTextView"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text="@{TextUtils.isEmpty(data.milg) ? (`-- km`) : (StringUtil.getDigitGroupingString(data.milg)+`km`)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_milg"
                tools:text="100,000km" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>