<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="fragment"
            type="com.genesis.apps.ui.main.home.FragmentHome2" />
    </data>

    <FrameLayout
        android:id="@+id/l_whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--                <com.genesis.apps.ui.common.view.NestedScrollableHost-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent">-->
<!--                    <androidx.recyclerview.widget.RecyclerView-->
<!--                        android:id="@+id/first_rv"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"/>-->
<!--                </com.genesis.apps.ui.common.view.NestedScrollableHost>-->

        <com.genesis.apps.ui.common.view.NestedScrollableHost
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/x_ffffff"
                android:descendantFocusability="blocksDescendants"
                android:paddingTop="20dp">

                <ImageView
                    android:id="@+id/iv_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_main_up"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tv_title_part"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="20dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/regular_genesissansheadglobal"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="-2dp"
                    android:maxLines="1"
                    android:text="@string/gm01_bottom_1"
                    android:textColor="@color/x_000000"
                    android:textSize="18dp"
                    android:visibility="gone"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_up" />


                <View
                    android:id="@+id/v_graph"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/tv_title_part"
                    app:layout_constraintEnd_toEndOf="@+id/tv_title_part"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_part" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/x_f4f4f4"
                    android:paddingStart="20dp"
                    android:paddingTop="40dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="110dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/v_graph">


                    <TextView
                        android:id="@+id/tv_title_asan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/light_genesissansheadglobal"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="-2dp"
                        android:maxLines="1"
                        android:text="@string/gm01_bottom_2"
                        android:textColor="@color/x_000000"
                        android:textSize="18dp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/l_asan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_title_asan">

                        <TextView
                            android:id="@+id/tv_asan_empty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_ffffff_stroke_e5e5e5"
                            android:fontFamily="@font/regular_genesissansheadglobal"
                            android:gravity="center"
                            android:paddingTop="33dp"
                            android:paddingBottom="33dp"
                            android:textSize="16dp"
                            android:text="@string/gm01_bottom_5"
                            android:textColor="@color/x_141414" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_title_warranty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/light_genesissansheadglobal"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="-2dp"
                        android:maxLines="1"
                        android:text="@string/gm01_bottom_3"
                        android:textColor="@color/x_000000"
                        android:textSize="18dp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/l_asan" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/l_warranty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ripple_bg_ffffff_stroke_e2e2e2"
                        android:paddingStart="15dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="20dp"
                        android:onClick="@{(view)->fragment.onSingleClickListener.onClick(view)}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_title_warranty">

                        <ImageView
                            android:id="@+id/iv_warranty_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_arrow_open_r"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_title_warranty_term"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/regular_genesissansheadglobal"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="2dp"
                            android:maxLines="1"
                            android:text="@string/gm01_bottom_4"
                            android:textColor="@color/x_000000"
                            android:textSize="16dp"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_msg_warranty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/light_genesissansheadglobal"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="6dp"
                            android:text="@string/gm01_bottom_11"
                            android:textColor="@color/x_000000"
                            android:textSize="16dp"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_title_warranty_term" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <TextView
                        android:id="@+id/tv_title_btr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/light_genesissansheadglobal"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="-2dp"
                        android:maxLines="1"
                        android:text="@string/gm01_bottom_6"
                        android:textColor="@color/x_000000"
                        android:textSize="18dp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/l_warranty" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/l_btr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ripple_bg_ffffff_stroke_e2e2e2"
                        android:paddingStart="15dp"
                        android:paddingTop="20dp"
                        android:paddingEnd="15dp"
                        android:paddingBottom="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_title_btr">

                        <ImageView
                            android:id="@+id/iv_btr_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_arrow_open_r"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_title_btr_term"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/btn_question"
                            android:drawablePadding="6dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/regular_genesissansheadglobal"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="2dp"
                            android:maxLines="1"
                            android:onClick="@{(view)->fragment.onSingleClickListener.onClick(view)}"
                            android:text="@string/gm01_bottom_7"
                            android:textColor="@color/x_000000"
                            android:textSize="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_msg_btr"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/light_genesissansheadglobal"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="6dp"
                            android:text="@string/gm01_bottom_8"
                            android:textColor="@color/x_000000"
                            android:textSize="16dp"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_title_btr_term" />


                        <TextView
                            android:id="@+id/tv_btr_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular_genesissansheadglobal"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="4dp"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="5dp"
                            android:text="@string/gm01_bottom_10"
                            android:textColor="@color/x_996449"
                            android:textSize="12dp"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_btr_apply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ripple_bg_000000"
                            android:fontFamily="@font/light_genesissansheadglobal"
                            android:letterSpacing="-0.01"
                            android:lineSpacingExtra="7dp"
                            android:onClick="@{(view)->fragment.onSingleClickListener.onClick(view)}"
                            android:paddingStart="14dp"
                            android:paddingTop="10dp"
                            android:paddingEnd="14dp"
                            android:paddingBottom="10dp"
                            android:text="@string/gm01_bottom_9"
                            android:textColor="@color/x_ffffff"
                            android:textSize="14dp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:visibility="visible" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        </com.genesis.apps.ui.common.view.NestedScrollableHost>

    </FrameLayout>

</layout>