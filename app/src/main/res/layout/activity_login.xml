<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <include
            android:id="@+id/l_title"
            layout="@layout/layout_titlebar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_login_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/regular_genesissanstextglobal"
            android:text="@string/login_msg_1"
            android:textColor="@color/x_7f7f7f"
            android:textSize="18dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/l_title" />

        <TextView
            android:id="@+id/tv_login_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_word_1"
            android:textSize="25dp"
            android:textColor="@color/x_000000"
            android:fontFamily="@font/bold_genesissanstextglobal"
            app:layout_constraintStart_toStartOf="@+id/tv_login_1"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_1" />

        <ImageView
            android:id="@+id/iv_login_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_2"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="@string/login_word_2"
            android:textSize="18dp"
            android:textColor="@color/x_ffffff"
            android:background="@color/x_404040"
            android:gravity="center"
            android:fontFamily="@font/bold_genesissanstextglobal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_login_1" />


        <TextView
            android:id="@+id/tv_login_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/light_genesissansheadglobal"
            android:text="@string/login_msg_3"
            android:textColor="@color/x_bfbfbf"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/btn_login"
            app:layout_constraintStart_toStartOf="@+id/btn_login"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" />

        <TextView
            android:id="@+id/tv_login_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/login_msg_2"
            android:textColor="@color/x_000000"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_3" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:background="@color/x_404040"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_4"
            app:layout_constraintVertical_bias="1.0">


            <TextView
                android:id="@+id/tv_login_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/regular_genesissanstextglobal"
                android:text="@string/login_msg_4"
                android:textColor="@color/x_bfbfbf"
                android:textSize="18dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_login_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_word_1"
                android:textSize="25dp"
                android:textColor="@color/x_ffffff"
                android:fontFamily="@font/bold_genesissanstextglobal"
                app:layout_constraintStart_toStartOf="@+id/tv_login_5"
                app:layout_constraintTop_toBottomOf="@+id/tv_login_5" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="@string/login_word_3"
                android:textSize="18dp"
                android:textColor="@color/x_000000"
                android:background="@color/x_ffffff"
                android:gravity="center"
                android:fontFamily="@font/bold_genesissanstextglobal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_login_6" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>