<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/l_map_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <!-- 백 버튼 -->
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/ripple_bg_ffffff_round_99"
            android:elevation="10dp"
            android:src="@drawable/btn_back"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- 타이틀 텍스트 버튼 -->
        <!--  @string/map_title_1
        -->
        <ImageView
            android:id="@+id/tv_map_title_text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ripple_bg_000000_oval"
            android:elevation="10dp"
            android:layout_margin="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ico_search"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


<!--        -->
<!--        <TextView-->
<!--            android:id="@+id/tv_map_title_text"-->
<!--            style="@style/MapOverlayTitleBar.Hint"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="58dp"-->
<!--            android:text="@string/cm02_5"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/back"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="@id/back"-->
<!--            tools:visibility="gone" />-->

        <!--  대리, 세차 검색시 타이틀 -->
        <TextView
            android:id="@+id/tv_map_title_address"
            style="@style/MapOverlayTitleBar.Hint"
            android:layout_height="50dp"
            android:text="@{title}"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/back"
            app:layout_constraintTop_toTopOf="@id/back"
            tools:text="@string/map_title_1"
            tools:visibility="gone" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/l_service_network_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/back">

            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="60dp"
                android:layout_height="58dp"
                android:background="@drawable/ripple_bg_111111_left_round_30"
                android:elevation="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ico_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/x_4d4d4d"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_search_list"
                app:layout_constraintStart_toEndOf="@+id/btn_search"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_search_list"
                android:layout_width="60dp"
                android:layout_height="58dp"
                android:background="@drawable/ripple_bg_111111_right_round_30"
                android:elevation="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ico_search_list"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_line"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>